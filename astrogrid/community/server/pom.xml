                        http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.astrogrid</groupId>
  <artifactId>astrogrid-community-server</artifactId>
  <name>Community service library</name>
  <version>2009.1.a04</version>
  <description>This project builds the jar of classes needed for the community web-application.</description>

  <parent>
    <groupId>org.astrogrid</groupId>
    <artifactId>astrogrid-base</artifactId>
    <version>2009.1-SNAPSHOT</version>
  </parent>

  <properties>
    <astrogrid_name>community-server</astrogrid_name>
  </properties>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/junit</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </testResource>
      <testResource>
        <directory>src/pem</directory>
        <includes>
          <include>*.pem</include>
        </includes>
      </testResource>
      <testResource>
      	<directory>src/keystore</directory>
        <includes>
          <include>tester.p12</include>
       </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <forkMode>once</forkMode>
          <systemProperties>
            <org.astrogrid.config.url>file://${basedir}/src/config/astrogrid.properties</org.astrogrid.config.url>
            <log4j.configuration>file://${basedir}/src/config/log4j.properties</log4j.configuration>
          </systemProperties>
          <excludes>
            <exclude>**/*Test.frog</exclude>
          </excludes>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*TestCase.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
