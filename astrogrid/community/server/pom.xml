    <contributor>
      <name>Mark Holliman</name>
      <organization>WFAU, Edinburgh</organization>
      <roles>
        <role>Tester</role>
      </roles>
      <timezone>0</timezone>
    </contributor>
  </contributors>
  <scm>
    <connection>scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/community/server</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/community/server</developerConnection>
  </scm>
  <organization>
    <name>AstroGrid</name>
    <url>http://www.astrogrid.org/</url>
  </organization>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/junit</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </testResource>
      <testResource>
        <directory>src/pem</directory>
        <includes>
          <include>*.pem</include>
        </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <forkMode>once</forkMode>
          <systemProperties>
            <org.astrogrid.config.url>file://${basedir}/src/config/astrogrid.properties</org.astrogrid.config.url>
            <log4j.configuration>file://${basedir}/src/config/log4j.properties</log4j.configuration>
          </systemProperties>
          <excludes>
            <exclude>**/*Test.frog</exclude>
          </excludes>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*TestCase.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
