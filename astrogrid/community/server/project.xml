<project
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="maven-project.xsd">

    <!--+
        | Extend the common project descriptor.
        +-->
    <extend>../maven/project.xml</extend>

    <!--+
        | The short name of the project.
        +-->
    <id>astrogrid-community-server</id>

    <!--+
        | The full name of the project.
        +-->
    <name>Community server</name>

    <!--+
        | The Java package name of the project.
        +-->
    <package>org.astrogrid.community.server</package>

    <!--+
        | A short description of the project.
        | The short description should be limited to a single line.
        +-->
    <shortDescription>
        Community Server Area
    </shortDescription>

    <!--+
        | A detailed description of the project.
        | This is used to generate the front page of the projects web site. 
        +-->
    <description>
        <![CDATA[
            Server side of the Community and implemenation of the various Web Service methods.  See the Webapp portion though
    	    on the deployment and setup of the community.
    	    Currently the Community classes use Castor (a JDO type library) allowing the connection to most any kind of database,
            but currently all tests have been using HSQLDB as the database of choice for the community.  In the Webapp section is
    	    the explanation of the configuration of the community web service that describes about configuration files in case you
    	    wish to change over databases or make other small changes to the mappings.    	
        ]]>
    </description>

    <!--+
        | Our cvs repository location.
        +-->
    <repository>
        <connection>
            scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/community/server
        </connection>
        <developerConnection>
            scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/community/server
        </developerConnection>
    </repository>

    <!--+
        | The external libraries required to build our component.
        +-->
    <dependencies>
        <!--+
            | The AstroGrid common components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-common</artifactId>
            <version>${astrogrid.common.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>
        <!--+
            | The Community common components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-common</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>
       <!--+
            | The MySpace delegate.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-store-client</artifactId>
            <version>${astrogrid.mySpace.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>
        <!--+
            | The Castor JDO library.
            +-->
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor</artifactId>
            <version>0.9.5</version>
            <type>jar</type>
            <url>http://www.castor.org/</url>
        </dependency>
        <!--+
            | The Castor XML library - required for Registry delegate.
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor-xml</artifactId>
            <version>0.9.5</version>
            <jar>castor-0.9.5-xml.jar</jar>
            <type>jar</type>
            <url>http://www.castor.org/</url>
        </dependency>
            +-->
        <!--+
            | The JTA library that Castor relies on.
            +-->
        <dependency>
            <groupId>jta</groupId>
            <artifactId>jta</artifactId>
            <version>1.0.1</version>
            <type>jar</type>
        </dependency>
        <!--+
            | The Xerces library that Castor relies on.
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xerces</artifactId>
            <version>2.4.0</version>
            <type>jar</type>
            <url>http://xml.apache.org/</url>
        </dependency>
            +-->
        <!--+
            | The XML library that Xerces relies on.
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
            <type>jar</type>
            <url>http://xml.apache.org/</url>
        </dependency>
            +-->
        <!--+
            | The Hsqldb jars.
            +-->
        <dependency>
            <groupId>hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>1.7.1</version>
            <type>jar</type>
            <url>http://www.hsqldb.org/</url>
        </dependency>
    	
        <!--+
            | The Registry common classes.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-registry-common</artifactId>
            <version>${astrogrid.registry.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>    	
    	
        <!--+
            | The Community resolver components.
            +-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-resolver</artifactId>
	        <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>
    	
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-client</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>    	
        	
    	
        <!--+
            | The JConfig jars.
        <dependency>
            <groupId>jconfig</groupId>
            <artifactId>jconfig</artifactId>
            <version>2.2</version>
            <type>jar</type>
            <url>http://www.jconfig.org/</url>
        </dependency>
            +-->
    </dependencies>

    <!--+
        | The build properties for our project.
        +-->
    <build>
        <!--+
            | The location of our Java source code.
            +-->
        <sourceDirectory>src/java</sourceDirectory>
        <!--+
            | The location of our JUnit source code.
            +-->
        <unitTestSourceDirectory>src/junit</unitTestSourceDirectory>
        <!--+
            | Our JUnit test classes.
            +-->
        <unitTest>
            <!--+
                | Which tests to include.
            <includes>
                <include>**/*Test.java</include>
            </includes>
                +-->
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <!--+
                | Which tests to exclude.
                +-->
            <excludes>
                <exclude>**/*Test.frog</exclude>
            </excludes>
            <!--+
                | The resources for our tests.
                +-->
            <resources>
                <resource>
                    <directory>target/database/config</directory>
                    <includes>
                        <include>*.xml</include>
                        <include>*.sql</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

</project>
