			<batchtest todir="${policy.server.base}/junit">
				<fileset dir="${policy.server.base}/classes">
					<include name="org/astrogrid/community/policy/server/**/JUnitTestCase.class"/>
				</fileset>
			</batchtest>
		</junit>
