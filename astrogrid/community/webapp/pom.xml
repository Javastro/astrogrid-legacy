<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.astrogrid</groupId>
  <artifactId>astrogrid-community</artifactId>
  <packaging>war</packaging>
  <name>Community Web Application</name>
  <version>2008.2.01</version>

  <description>Community is a AstroGrid web-application to manage user accounts.</description>
  <inceptionYear>2003</inceptionYear>

  <licenses>
    <license>
      <name>Academic Free License v2.1</name>
      <url>http://opensource-definition.org/licenses/afl-2.1.html</url>
      <distribution>manual</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>dave</id>
      <name>Dave Morris</name>
      <organization>IoA, Cambridge</organization>
      <roles>
        <role>Original developer</role>
      </roles>
      <timezone>0</timezone>
    </developer>
    <developer>
      <id>gtr</id>
      <name>Guy Rixon</name>
      <organization>IoA Cambridge</organization>
      <roles>
        <role>maintainer</role>
      </roles>
      <timezone>0</timezone>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Gary Gilchrist</name>
      <organization>University of Leicester</organization>
      <roles>
        <role>Tester</role>
      </roles>
      <timezone>0</timezone>
    </contributor>
    <contributor>
      <name>Mark Holliman</name>
      <organization>WFAU, Edinburgh</organization>
      <roles>
        <role>Tester</role>
      </roles>
      <timezone>0</timezone>
    </contributor>
  </contributors>
  <scm>
    <connection>scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/community/webapp</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/community/webapp</developerConnection>
  </scm>
  <organization>
    <name>AstroGrid</name>
    <url>http://www.astrogrid.org</url>
  </organization>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/junit</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>2007.2.01</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-common</artifactId>
      <version>2008.0</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-client</artifactId>
      <version>2008.0</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-server</artifactId>
      <version>2008.2</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-security</artifactId>
      <version>2008.2.03</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
    <dependency>
      <groupId>xmlunit</groupId>
      <artifactId>xmlunit</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
    </dependency>
    <dependency>
      <groupId>junitee</groupId>
      <artifactId>junitee</artifactId>
      <version>1.11</version>
    </dependency>
    
    
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-changes-plugin</artifactId>
        <configuration>
          <xmlPath>${basedir}/xdocs/changes.xml</xmlPath>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-report-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
  <distributionManagement>
    <repository>
      <id>IoA</id>
      <name>Maven-2 repository at IoA Cambridge</name>
      <url>scp://astrogrid.ast.cam.ac.uk/maven2</url>
      <layout>default</layout>
    </repository>
    <site>
      <id>default</id>
      <name>Default Site</name>
      <url>scp://terror.star.le.ac.uk/software_docs/community-${pom.version}</url>
    </site>
  </distributionManagement>
</project>
