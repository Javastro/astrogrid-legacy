<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.astrogrid</groupId>
  <artifactId>astrogrid-community</artifactId>
  <packaging>war</packaging>
  <name>Community Web Application</name>
  <version>2009.1.a04</version>

  <description>Community is a AstroGrid web-application to manage user accounts.</description>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>src/junit</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/config/database</directory>
        <includes>
          <include>*.xml</include>
          <include>*.sql</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/site/resources</directory>
        <includes>
          <include>about.txt</include>
        </includes>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
          <webResources>
            <resource>
              <directory>src/site/resources</directory>
              <includes>
                <include>about.txt</include>
              </includes>
              <filtering>true</filtering>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-common</artifactId>
      <version>2008.0</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-server</artifactId>
      <version>2009.1.a05</version>
    </dependency>
    <dependency>
      <groupId>commons-fileupload</groupId>
      <artifactId>commons-fileupload</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.3.2</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.sourceforge.junitee</groupId>
      <artifactId>junitee</artifactId>
      <version>1.11</version>
    </dependency>
  </dependencies>

  <properties>
    <netbeans.hint.deploy.server>gfv3</netbeans.hint.deploy.server>
  </properties>

  <url>${astrogrid_doc_URL_root}/p/community/${project.version}/webapp</url>

  <distributionManagement>
    <site>
      <id>agsite</id>
      <name>Default Site</name>
      <url>${astrogrid_doc_server_root}/p/community/${project.version}/webapp</url>
    </site>
  </distributionManagement>

</project>
