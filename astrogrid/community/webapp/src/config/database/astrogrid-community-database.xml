<!DOCTYPE databases PUBLIC
    "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN"
    "http://castor.exolab.org/jdo-conf.dtd">
<!--+
    | Template for our JNDI database configuration.
    | This refers to datasource defined in the Tomcat config.
    +-->
<database name="org.astrogrid.community.database" engine="hsql">
    <!--+
        | This refers to a javax.sql.DataSource defined in the Tomcat config.
        +-->
    <jndi name="java:comp/env/jdbc/org.astrogrid.community.database"/>
    <!--+
        | This refers to a local mapping file, in the same directory.
        +-->
    <mapping href="astrogrid-community-mapping.xml"/>
</database>
