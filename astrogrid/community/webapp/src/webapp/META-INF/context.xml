<Context path="/astrogrid-community">

    <!--+
        | Moved to config properties.
        -->
    <Environment
        description="Community identifier"
        name="org.astrogrid.community.ident"
        override="false" type="java.lang.String"
        value="@COMMUNITYID@"/>

    <Environment
        description="Community Default VOSpace (Registry Ivorn)"
        name="org.astrogrid.community.default.vospace"
        override="false" type="java.lang.String"
        value="ivo://@REGAUTHORITY@/myspace"/>

    <Environment
        description="Registry Query Endpoint"
        name="org.astrogrid.registry.query.endpoint"
        override="false" type="java.lang.String"
        value="http://localhost:8080/astrogrid-registry/services/RegistryQuery"/>

    <Environment
        description="Publishing Metadata to Registry endpoint"
        name="org.astrogrid.registry.admin.endpoint"
        override="false" type="java.lang.String"
        value="http://localhost:8080/astrogrid-registry/services/RegistryUpdate"/>


    <Resource
        name="jdbc/org.astrogrid.community.database"
        type="javax.sql.DataSource"
        />

    <ResourceParams
        name="jdbc/org.astrogrid.community.database">
        <parameter>
            <name>url</name>
            <value>jdbc:hsqldb:@WORKDIR@/org.astrogrid.community</value>
        </parameter>
        <parameter>
            <name>driverName</name>
            <value>jdbc:hsqldb:@WORKDIR@/org.astrogrid.community</value>
        </parameter>
        <parameter>
            <name>driverClassName</name>
            <value>org.hsqldb.jdbcDriver</value>
        </parameter>
        <parameter>
            <name>username</name>
            <value>sa</value>
        </parameter>
        <parameter>
            <name>password</name>
            <value/>
        </parameter>
    </ResourceParams>
</Context>