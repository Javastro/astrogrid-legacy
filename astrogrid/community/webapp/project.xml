      <unitTest>
        <includes>
          <include>**/*Test.java</include>
        </includes>
        <resources>
          <resource>
            <!-- Credential files for testing the credential store. -->
            <directory>src/pem</directory>
            <includes>*.pem</includes>
          </resource>
        </resources>
      </unitTest>
      <resources>
        <resource> <!-- These are the configuration files used by JDO to find the DB -->
          <directory>src/config/database</directory>
          <includes>*.xml *.sql</includes>
        </resource>  
      </resources>
    </build>


