<project
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="maven-project.xsd">

    <!--+
        | Extend the common project descriptor.
        +-->
    <extend>../maven/project.xml</extend>

    <!--+
        | The short name of the project.
        | This is used when naming jars and distribution files.
        +-->
    <id>astrogrid-community-install</id>

    <!--+
        | The full name of the project.
        | This is used when generating JavaDoc titles.
        +-->
    <name>AstroGrid community install toolkit</name>

    <!--+
        | A short description of the project.
        | The short description should be limited to a single line.
        +-->
    <shortDescription>
        Short description of the project ....
    </shortDescription>

    <!--+
        | A detailed description of the project.
        | This is used to generate the front page of the projects web site. 
        +-->
    <description>
        <![CDATA[
            The install toolkit provides a zip file containing all of the tools needed to install a Community service.
        ]]>
    </description>

    <!--+
        | Our cvs repository location.
        +-->
    <repository>
        <connection>
            scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/community/install
        </connection>
        <developerConnection>
            scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/community/install
        </developerConnection>
    </repository>

    <!--+
        | The external libraries required to build our component.
        +-->
    <dependencies>
        <!--+
            | The AstroGrid common components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-common</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The Community common components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-common</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The Community client components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-client</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The Community resolver components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-resolver</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The Community webapp.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-community-webapp</artifactId>
            <version>${pom.currentVersion}</version>
            <type>war</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <war.fileset>true</war.fileset>
            </properties>
        </dependency>
        <!--+
            | The Registry common classes.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-registry-common</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The Registry client components.
            +-->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>astrogrid-registry-client</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
                <jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        <!--+
            | The JXpath library - required for Registry delegate.
            +-->
       <dependency>
            <artifactId>commons-jxpath</artifactId>
            <groupId>commons-jxpath</groupId>
            <version>1.1</version>
            <type>jar</type>
            <url></url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The Jakarta Regexp library - required for Registry delegate.
            +-->
       <dependency>
            <artifactId>jakarta-regexp</artifactId>
            <groupId>jakarta-regexp</groupId>
            <version>1.3</version>
            <type>jar</type>
            <url></url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The new Castor libraries.
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor</artifactId>
            <version>0.9.5.3</version>
            <type>jar</type>
            <url>http://www.castor.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
            +-->
        <!--+
            | The old Castor JDO library.
            +-->
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor</artifactId>
            <version>0.9.5</version>
            <type>jar</type>
            <url>http://www.castor.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The JTA library that Castor relies on.
            +-->
        <dependency>
            <groupId>jta</groupId>
            <artifactId>jta</artifactId>
            <version>1.0.1</version>
            <type>jar</type>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The Castor XML library.
            +-->
        <dependency>
            <groupId>castor</groupId>
            <artifactId>castor-xml</artifactId>
            <version>0.9.5</version>
            <jar>castor-0.9.5-xml.jar</jar>
            <type>jar</type>
            <url>http://www.castor.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The Xerces library that Castor relies on.
            +-->
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xerces</artifactId>
            <version>2.4.0</version>
            <type>jar</type>
            <url>http://xml.apache.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The XML library that Xerces relies on.
            +-->
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
            <type>jar</type>
            <url>http://xml.apache.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The Hsqldb library.
            +-->
        <dependency>
            <groupId>hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>1.7.1</version>
            <type>jar</type>
            <url>http://www.hsqldb.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | Ant library for the tasks.
            +-->
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
            <type>jar</type>
            <url>http://ant.apache.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
        <!--+
            | The JConfig jars.
        <dependency>
            <groupId>jconfig</groupId>
            <artifactId>jconfig</artifactId>
            <version>2.2</version>
            <type>jar</type>
            <url>http://www.jconfig.org/</url>
            <properties>
                <lib.fileset>true</lib.fileset>
            </properties>
        </dependency>
            +-->
    </dependencies>

    <!--+
        | The build properties for our project.
        +-->
    <build>
        <!--+
            | The location of our Java source code.
            +-->
        <sourceDirectory>src/java</sourceDirectory>

        <!--+
            | The resources for our tests.
            +-->
        <resources>
            <!--+
                | The Castor XML mapping.
                +-->
            <resource>
                <targetPath>org/astrogrid/community/install/loader</targetPath>
                <directory>src/castor</directory>
                <includes>
                    <include>mapping.xml</include>
                </includes>
            </resource>
        </resources>

        <!--+
            | The location of our JUnit source code.
            +-->
        <unitTestSourceDirectory>src/junit</unitTestSourceDirectory>
        <!--+
            | Our JUnit test classes.
            +-->
        <unitTest>
            <!--+
                | Which tests to include.
                +-->
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <!--+
                | The resources for our tests.
            <resources>
                <resource>
                </resource>
            </resources>
                +-->
        </unitTest>
    </build>
</project>






