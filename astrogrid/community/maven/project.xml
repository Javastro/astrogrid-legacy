<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ant="jelly:ant"
    xsi:noNamespaceSchemaLocation="maven-project.xsd">
    <!--+
        | Extend the global astrogrid project.xml.
        +-->
    <extend>${basedir}/../../maven-base/project.xml</extend>

    <!--+
        | The current version of the Maven project descriptor.
        +-->
    <pomVersion>3</pomVersion>
    <currentVersion>${astrogrid.community.version}</currentVersion>

    <!--+
        | The short name of the project group.
        | This value is used to group all jars for a project in one directory.
        | TODO - This should come from the top level master project.
    <groupId>org.astrogrid</groupId>
    <groupId>astrogrid-community</groupId>
        +-->
    <groupId>org.astrogrid</groupId>

    <!--+
        | The current versions of other AstroGrid components.
        | Guess ... didn't work.
    <astrogridVersions>
        <community>SNAPSHOT</community>
        <myspace>SNAPSHOT</myspace>
    </astrogridVersions>
        +-->

 
    <!--+
        | Describes the licenses for this project.
    <licenses>
    </licenses>
        +-->

    <!--+
        | The external libraries required to build our components.
        +-->
    <dependencies>
        <!--+
            | The Axis webapp war file.
            +-->
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.1</version>
            <type>war</type>
            <url>http://ws.apache.org/axis/index.html</url>
        </dependency>
        <!--+
            | JUnit library for test tasks.
            +-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
            <url>http://www.junit.org/</url>
        </dependency>
        <!--+
            | Ant library for test tasks.
            +-->
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
            <type>jar</type>
            <url>http://ant.apache.org/</url>
        </dependency>
        <!--+
            | Commons logging API.
            +-->
        <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.0.3</version>
        </dependency>
        <!--+
            | Log4j toolkit.
            +-->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
    	
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.7.1</version>
            <properties>
	        	<war.bundle>true</war.bundle>            	
            	<jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
          	<version>2.7.1</version>
            <properties>
	        	<war.bundle>true</war.bundle>            	
	            <jar.fileset>true</jar.fileset>
            </properties>        	
        </dependency>
    	
    	
    </dependencies>

</project>
