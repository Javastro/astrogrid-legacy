<?xml version="1.0" encoding="UTF-8"?>

<project>
  
    <!--+
        | Extend the global astrogrid project.xml.
        +-->
    <extend>${basedir}/../../maven-base/project.xml</extend>

    
    <pomVersion>3</pomVersion>
    <groupId>org.astrogrid</groupId>
    <!-- No artifactId element because this prject makes no artifact -->
    <name>Community Maven resources</name>
    <currentVersion>2008.0a1</currentVersion>

    <!--+
        | The external libraries required to build our components.
        +-->
    <dependencies>
        <!--+
            | JUnit library for test tasks.
            +-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
            <url>http://www.junit.org/</url>
        </dependency>
        <!--+
            | Ant library for test tasks.
            +-->
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
            <type>jar</type>
            <url>http://ant.apache.org/</url>
        </dependency>
        <!--+
            | Commons logging API.
            +-->
        <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.0.4</version>
        </dependency>
        <!--+
            | Log4j toolkit.
            +-->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
    	
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.7.1</version>
            <properties>
	        	<war.bundle>true</war.bundle>            	
            	<jar.fileset>true</jar.fileset>
            </properties>
        </dependency>
        
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
          	<version>2.7.1</version>
            <properties>
	        	<war.bundle>true</war.bundle>            	
	            <jar.fileset>true</jar.fileset>
            </properties>        	
        </dependency>
    	
      <!-- Apache Axis, our SOAP implementation. 
           This is used for access to the tools at compile time.-->
      <dependency>
        <groupId>axis</groupId>
        <type>war</type>
        <artifactId>axis</artifactId>
        <version>1.3</version>
      </dependency>
    </dependencies>

</project>
