<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ant="jelly:ant"
    xsi:noNamespaceSchemaLocation="maven-project.xsd">

    <!--+
        | Force a load of the version properties file
        | Guess ... didn't work.
    <ant:property file="versions.properties"/>
    <ant:echo message="astrogrid.community.version : ${astrogrid.community.version}"/>
        +-->

    <!--+
        | The current version of the Maven project descriptor.
        +-->
    <pomVersion>3</pomVersion>

    <!--+
        | The short name of the project group.
        | This value is used to group all jars for a project in one directory.
        | TODO - This should come from the top level master project.
    <groupId>org.astrogrid</groupId>
    <groupId>astrogrid-community</groupId>
        +-->
    <groupId>org.astrogrid</groupId>

    <!--+
        | The current version of the project.
        | This is used when naming jars and distribution files.
        | This is also used to resolve the internal dependencies within this project.
    <currentVersion>SNAPSHOT</currentVersion>
    <currentVersion>1.5.0</currentVersion>
        +-->
    <currentVersion>SNAPSHOT</currentVersion>

    <!--+
        | The current versions of other AstroGrid components.
        | Guess ... didn't work.
    <astrogridVersions>
        <community>SNAPSHOT</community>
        <myspace>SNAPSHOT</myspace>
    </astrogridVersions>
        +-->

    <!--+
        | The cvs repository location.
        +-->
    <repository>
        <connection>
            scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/community
        </connection>
        <developerConnection>
            scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/community
        </developerConnection>
    </repository>

    <!--+
        | Bugzilla URL.
        +-->
    <issueTrackingUrl>http://www.astrogrid.org/bugzilla/</issueTrackingUrl>

