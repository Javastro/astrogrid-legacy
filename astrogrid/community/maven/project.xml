            <name>Kevin Benson</name>
            <id>KevinBenson</id>
            <email>kmb@mssl.ucl.ac.uk</email>
            <organization>MSSL</organization>
            <roles>
                <role>Work group leader</role>
            </roles>
        </developer>
        <!--+
