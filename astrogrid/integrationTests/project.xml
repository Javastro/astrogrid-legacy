<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="maven-project.xsd">
	<pomVersion>3</pomVersion>
	<id>astrogrid-integrationTests</id>
	<name>Astrogrid Integration Tests</name>
	<currentVersion>SNAPSHOT</currentVersion>
	<organization>
		<name>AstroGrid</name>
		<url>http://www.astrogrid.org</url>
		<logo>http://www.astrogrid.org/images/AGlogo</logo>
	</organization>
	<inceptionYear>2002</inceptionYear>
	<description> This project consists of test scripts and code to run integration tests on 
	Astrogrid.  Currently these consist of a number of JUnit tests.</description>
	<shortDescription>AstroGrid Integration Tests</shortDescription>
	<siteDirectory>/var/www/www/maven/build/integrationTests</siteDirectory>
	<issueTrackingUrl>http://www.astrogrid.org/bugzilla/</issueTrackingUrl>
	<package>org.astrogrid</package>
	<logo>http://www.astrogrid.org/images/AGlogo</logo>
	<build>
		<sourceDirectory>src/java</sourceDirectory>
		<unitTestSourceDirectory>test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
	<developers>
		<developer>
			<name>John D Taylor</name>
			<id>jdt</id>
			<email>jdt@roe.ac.uk</email>
		</developer>
		<developer>
			<name>Paul Harrison</name>
			<id>pah</id>
			<email>pah@jb.man.ac.uk</email>
		</developer>
		<developer>
			<name>Martin Hill</name>
			<id>mch</id>
			<email>mch@roe.ac.uk</email>
			<organization>ROE</organization>
		</developer>
	</developers>
	<repository>
		<connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/integrationTests
    </connection>
		<developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/integrationTests
    </developerConnection>
		<url>http://www.astrogrid.org/viewcvs/astrogrid/integrationTests/</url>
	</repository>
	<dependencies>
		<dependency>
			<artifactId>jconfig</artifactId>
			<groupId>jconfig</groupId>
			<version>2.1</version>
		</dependency>
		<dependency>
			<artifactId>junit</artifactId>
			<groupId>junit</groupId>
			<version>3.8</version>
		</dependency>
		<dependency>
			<artifactId>log4j</artifactId>
			<groupId>log4j</groupId>
			<version>1.2.4</version>
		</dependency>
		<dependency>
			<artifactId>commons-logging</artifactId>
			<groupId>commons-logging</groupId>
			<version>1.0.3</version>
		</dependency>
	</dependencies>
	<reports>
		<report>
      maven-changelog-plugin
    </report>
		<report>
      maven-changes-plugin
    </report>
		<report>
      maven-checkstyle-plugin
    </report>
		<report>
      maven-clover-plugin
    </report>
		<report>
      maven-developer-activity-plugin
    </report>
		<report>
      maven-file-activity-plugin
    </report>
		<report>
      maven-javadoc-plugin
    </report>
		<report>
      maven-jdepend-plugin
    </report>
		<report>
      maven-junit-report-plugin
    </report>
		<report>
      maven-jxr-plugin
    </report>
		<report>
      maven-license-plugin
    </report>
		<report>
      maven-linkcheck-plugin
    </report>
		<report>
      maven-pmd-plugin
    </report>
		<report>
      maven-tasklist-plugin
    </report>
		<report>
      maven-simian-plugin
    </report>
	</reports>
</project>
