<Context path="/astrogrid-cea-http-@VERSION@">
    <Environment name="cea.filestore.basedir" override="true" type="java.lang.String" value="@WORKDIR@/cea/http/store" />
    <Environment name="cea.application.authorityid" description="The authority ID under which applications will be registered" type="java.lang.String"
		value="@REGAUTHORITY@"/>

    <!-- registry endpoints - these are essential for the proper working of CEA - 
	it needs to be able to query the registry to do myspace operations and can update the registry with its own configuration 
	I suspect that most of the components will need the query endpoint-->
    <Environment name="org.astrogrid.registry.admin.endpoint" description="registry update service endpoint URL" type="java.lang.String" 
        value="@CENTRALREGISTRY@Update" />
    <Environment name="org.astrogrid.registry.query.endpoint" description="registry query service endpoint URL" type="java.lang.String" 
        value="@CENTRALREGISTRY@Query" />
</Context>