<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="maven-project.xsd">
    <extend>../../maven-base/project.xml</extend>
    <id>auto-integration-tests</id>
    <name>Tests for Automated Integration.</name>
    <description>
    This project document defines the tests to execute against the installed local astorgrid setup.
    In a separate project, so that the parent project can be used in isolation, just to set up an integration machine.
    </description>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/test/java</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xmltemplate</include>
                        <include>**/*.properties</include>
                        <include>**/*.sql</include>
                        <include>**/*.ddl</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
