<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../webapp-base/project.xml</extend>
        <id>astrogrid-pal-skycatserver</id>
        <name>Astrogrid Sky Server WebApp</name>
  <currentVersion>${astrogrid.pal.latest}</currentVersion>
  <description>Webapplication for serving sky object catalogues</description>
  <shortDescription>AstroGrid Sky Server</shortDescription>

   <licenses>
      <license>
         <name>The AstroGrid Software License, Version 1.2</name>
         <url>http://www.astrogrid.org</url>
         <distribution>repo</distribution>
      </license>
   </licenses>

 <resources>
    <resource>
      <directory>${basedir}</directory>
      <includes>
        <include>src/webapp/WEB-INF/server-config.wsdd</include>
      </includes>
    </resource>
  </resources>
  
  
  <dependencies>

    <!-- HSQLDB for sample & temporary dbs -->
    <dependency>
      <id>hsqldb</id>
      <version>1.7.1</version>
      <properties>
         <war.bundle>true</war.bundle>
      </properties>
    </dependency>



  </dependencies>

</project>
