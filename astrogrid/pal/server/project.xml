            <directory>${basedir}/src/java/</directory>
            <includes>
              <include>**/*.xml</include>
              <include>**/*.xsl</include>
            </includes>
          </resource>
         </resources>

        <!--+
            | Our JUnit test classes.
            +-->
        <unitTest>

            <!--+
                | Which tests to include.
                +-->
            <includes>
                <include>**/*Test.java</include>
            </includes>

         
            <!--+
                | Which tests to include.
                +-->
            <resources>
                <resource>
                 <directory>${basedir}/test/java</directory>
                 <includes>
