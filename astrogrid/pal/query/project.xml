<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id: project.xml,v 1.4 2005/03/21 18:31:50 mch Exp $ -->

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    xsi:noNamespaceSchemaLocation="//../maven-base/xsd/maven-project.xsd">

    <!--will eventually extend from /base when Maven RC3 installed-->

    <extend>${basedir}/../../maven-base/project.xml</extend>

    <currentVersion>${astrogrid.pal.latest}</currentVersion>

    <id>astrogrid-pal-query</id>

    <name>Astrogrid Query Package</name>

    <description>Object model, parsers and writers for query languages</description>

    <shortDescription>AstroGrid Query</shortDescription>

    <dependencies>

      <dependency>
         <artifactId>astrogrid-pal-sky</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.pal.latest}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-pal-units</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.pal.latest}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-common</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.common.version}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-config</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.config.version}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-pal-errors</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.pal.latest}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-pal-geom</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.pal.latest}</version>
      </dependency>

       <!-- for logging -->
       <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.0.3</version>
       </dependency>

       <!-- for writing XML -->
      <dependency>
         <artifactId>astrogrid-xml</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.xml.version}</version>
      </dependency>

      <dependency>
         <artifactId>astrogrid-slinger-api</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.slinger.version}</version>
      </dependency>

    </dependencies>
   
    <build>
        <!--+
            | The location of our Java source code.
            +-->
        <sourceDirectory>src/java</sourceDirectory>
        <!--+
            | The location of our JUnit source code.

        <unitTestSourceDirectory>src/junit</unitTestSourceDirectory>
            +-->

        <resources>
            <resource>
               <directory>${basedir}/src</directory>
              <includes>
                  <include>xsl/*.xsl</include>
               <!--
                  <include>schema/*.xsd</include>
                  <include>schema/**/*.xsd</include>
                  -->
              </includes>
            </resource>
        </resources>

        <!--+
            | Our JUnit test classes.
            +-->
        <unitTest>
            <!--+
                | Which tests to include.
                +-->
            <includes>
                <include>**/*Test.java</include>
            </includes>
            
            <resources>
                <resource>
                     <directory>${basedir}/src/junit</directory>
                 <includes>
                     <include>**/*.xml</include>
                 </includes>
                </resource>
            </resources>
         
        </unitTest>
    </build>


</project>







