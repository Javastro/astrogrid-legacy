				<pathelement path="${ant.home}/lib/optional.jar"/>
			</classpath>
			<!-- Generate an XML log file -->
			<formatter type="xml"/>
			<!-- Run our JUnit tests -->
			<batchtest todir="build/myspace/client/junit">
				<fileset dir="build/myspace/client/classes">
					<include name="**/junit/**/JUnit*.class" />
				</fileset>
			</batchtest>
		</junit>
	</target>

	<!-- Remove our mock MySpace service -->
	<target name="myspace.delete" depends="">
		<!-- Remove our mock MySpace service -->
		<antcall target="myspace.service.remove"/>
		<!-- Remove the server build files -->
		<antcall target="myspace.server.delete"/>
		<!-- Remove the client build files -->
		<antcall target="myspace.client.delete"/>
	</target>

	<!-- Rebuild our mock MySpace service -->
	<target name="myspace.REBUILD" depends="">
		<!-- Remove our mock MySpace service -->
		<antcall target="myspace.delete"/>

		<!-- Compile the server side code -->
		<antcall target="myspace.service.java.compile"/>
		<!-- Test the server side code (offline) -->
		<antcall target="myspace.service.test.junit"/>
		<!-- Install the server side code -->
		<antcall target="myspace.service.install"/>

		<!-- Build the client side stubs -->
		<antcall target="myspace.client.wsdl2java"/>
