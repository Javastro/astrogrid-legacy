	<target name="myspace.client.test.junit" depends="init, myspace.client.build.java">
		<!-- Create the reports directory -->
		<mkdir dir="build/myspace/client/junit"/>
		<!-- Run the JUnit tests -->
		<junit printsummary="yes" haltonfailure="yes" showoutput="yes" fork="true">
			<!-- Use our local classes -->
			<classpath>
				<!-- Our own classes -->
				<pathelement path="build/myspace/client/classes"/>
				<!-- The Axis libraries -->
				<path refid="axis.classpath"/>
				<!-- The JUnit libraries -->
				<pathelement path="${junit.classpath}"/>
				<!-- FIXME (required since JDK 1.4.2) -->
