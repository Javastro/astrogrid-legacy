	<!-- Compile our source code -->
	<target name="java.compile" depends="init" description="Compile our Java classes">
		<!-- Create our java source directory -->
		<mkdir dir="build/portal/java"/>
		<!-- Copy our java source code -->
		<copy toDir="build/portal/java">
			<fileset dir="src/java">
				<exclude name="**/mock/myspace/client/**"/>
			</fileset>
		</copy>
		<!-- Create our java classes directory -->
		<mkdir dir="build/portal/classes"/>
		<!-- Compile our java classes -->
		<javac srcdir="build/portal/java"
		       classpathref="build.classpath"
		       destdir="build/portal/classes"
