			<![CDATA[
				xspAttr.clear();

				xspAttr.addAttribute(
					"",
					"type",
					"type",
					"CDATA",
					"toad"
					);

				this.contentHandler.startElement(
					"",
					"animal",
					"animal",
					xspAttr
					);

				xspAttr.clear();

				this.characters("Brown Toad");

				this.contentHandler.endElement(
					"",
					"animal",
					"animal"
					);
			]]>
		</xsp:logic>

