<?xml version="1.0"?>
<!-- $Id: project.xml,v 1.2 2008/09/08 15:37:12 jl99 Exp $ -->
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="xsd/maven-project.xsd">
    <pomVersion>3</pomVersion>
    <name>Astrogrid Master Maven POM</name>
    <groupId>org.astrogrid</groupId>
    <artifactId>astrogrid-master</artifactId>
    <currentVersion>${astrogrid.release}</currentVersion>
    <organization>
        <name>AstroGrid</name>
        <url>http://www.astrogrid.org</url>
        <logo>http://www.astrogrid.org/images/AGlogo</logo>
    </organization>
    <inceptionYear>2002</inceptionYear>
    <package>org.astrogrid</package>
    <logo>http://www.astrogrid.org/images/AGlogo</logo>
    <shortDescription>This base project contains sensible settings for most components.</shortDescription>
    <url>http://www.astrogrid.org/maven/docs/${astrogrid.release}/${astrogrid.name}/index.html</url>
    <issueTrackingUrl>http://www.astrogrid.org/bugzilla/</issueTrackingUrl>
    <siteAddress>www.astrogrid.org</siteAddress>
    <siteDirectory>${astrogrid.docs.root}/${astrogrid.name}</siteDirectory>

 <!--set the property astrogrid.name in your component's project.properties file
  for the cvs repos data to be correct-->
    <repository>
    <!--  not available any longer.
        <connection>scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/${astrogrid.name}</connection>
     -->
        <connection>scm:cvs:pserver:anonymous@cvs2.astrogrid.org:/astrogrid:devel/astrogrid/${astrogrid.name}</connection> 
        <developerConnection>scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/${astrogrid.name}</developerConnection>
        <url>http://www.astrogrid.org/viewcvs/astrogrid/${astrogrid.name}/</url>
        
    </repository>
    <versions/>
    <branches/>
    <mailingLists/>

 	<developers>
 
  		<developer>
   			<name>Jeff Lusted</name>
   			<id>jl99</id>
   			<email>jl99@star.le.ac.uk</email>
   			<organization> Leicester </organization>
   			<roles>
    			<role> ADQL Parser Developer </role>
    			<role> VODesktop Query Builder Developer </role>
   			</roles>
  		</developer>
 
 </developers>
 
     <reports>
        <report> maven-changelog-plugin </report>
        <report> maven-developer-activity-plugin </report>
        <report> maven-file-activity-plugin </report>
        <report> maven-javadoc-plugin </report>
    </reports>
 
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/log4j.properties</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    
    <properties/>
</project>
