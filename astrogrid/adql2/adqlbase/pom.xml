  	<tag>HEAD</tag>
	</scm>
          
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>${basedir}/test/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${basedir}/test/queries</directory>
        <includes>
          <include>**/README_FOR_QUERIES</include>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.xsl*</include>
          <include>**/*.adqls</include>
          <include>**/*.adqlx</include>
        </includes>
      </testResource>
      <testResource>
        <directory>${basedir}/src/config</directory>
        <includes>
          <include>log4j.properties</include>
        </includes>
      </testResource>
    </testResources>
