<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.astrogrid</groupId>
  <artifactId>astrogrid-adqlparser-utils</artifactId>
  <packaging>jar</packaging>
  <version>${astrogrid_adql2_version}</version>
  <name>Astrogrid ADQL Utilities</name>
  <description>This project contains miscellaneous programs for testing the ADQL parser, and for producing BNF diagrams from the file AdqlStoX.jjt</description>
	<parent>
		<artifactId>astrogrid-adqlparser</artifactId>
		<groupId>org.astrogrid</groupId>
		<version>2010.1</version>
	</parent>              
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
      <resource>
        <directory>${basedir}/resources</directory>
        <includes>
          <include>**/*.xsl</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
    <plugins>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-adqlparser-base</artifactId>
      <version>${astrogrid_adql2_version}</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-adqlparser-sv</artifactId>
      <version>${astrogrid_adql2_version}</version>
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-adqlbeans</artifactId>
      <version>${astrogrid_adql2_version}</version>
    </dependency>
    <dependency>
      <groupId>xmlunit</groupId>
      <artifactId>xmlunit</artifactId>
      <version>1.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.16</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
    </plugins>
  </reporting>
  <url>${astrogrid_doc_URL_root}/p/adql2/${project.version}/adqlutils</url>
  <distributionManagement>
    <site>
      <id>agsite</id> 
      <name>Default Site</name>
      <url>${astrogrid_doc_server_root}/p/adql2/${project.version}/adqlutils</url>
    </site>  
 </distributionManagement>
</project>
