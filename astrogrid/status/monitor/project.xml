<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    xsi:noNamespaceSchemaLocation="../../maven-base/xsd/maven-project.xsd">

    <!--will eventually extend from /base when Maven RC3 installed-->

    <extend>${basedir}/../../maven-base/project.xml</extend>

    <currentVersion>${astrogrid.status.version}</currentVersion>

    <id>astrogrid-status-monitor</id>

    <name>Astrogrid Status Monitor</name>

    <description>Components and code for monitoring status of components</description>

    <shortDescription>AstroGrid Status Component</shortDescription>

    <dependencies>
        <dependency>
            <artifactId>astrogrid-common</artifactId>
            <groupId>org.astrogrid</groupId>
            <version>${astrogrid.common.version}</version>
        </dependency>

        <dependency>
            <artifactId>astrogrid-status-api</artifactId>
            <groupId>org.astrogrid</groupId>
            <version>${astrogrid.status.version}</version>
        </dependency>

         <!-- for logging -->
        <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.0.4</version>
        </dependency>

       <!-- servlet support -->
       <dependency>
         <id>servletapi</id>
         <version>2.3</version>
       </dependency>

       <!-- RPC support -->
       <dependency>
         <id>jaxrpc-api</id>
         <version>1.0.3</version>
       </dependency>
       <dependency>
         <id>jax-qname</id>
         <version>UNKNOWN</version>
         <jar>jax-qname.jar</jar>
       </dependency>
       <dependency>
         <id>axis</id>
         <version>1.3</version>
       </dependency>

    </dependencies>

