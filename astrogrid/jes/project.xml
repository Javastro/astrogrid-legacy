<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="maven-project.xsd">

  <pomVersion>3</pomVersion>
  <id>astrogrid-jes</id>
  <name>AstroGrid Job Management</name>

  <currentVersion>HEAD</currentVersion>
  
  <organization>
    <name>AstroGrid</name>
    <url>http://www.astrogrid.org</url>
  </organization>
  
  <inceptionYear>2002</inceptionYear>
  <package>org.astrogrid</package>
  
  <shortDescription>AstroGrid Job Management Components</shortDescription>

  <siteDirectory>/var/www/www/maven/build/jes</siteDirectory>
  
  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/registry
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/registry
    </developerConnection>
  </repository>
  
  <developers>
    <developer>
      <name>Jeff Lusted</name>
      <id>jl99</id>
      <email>jl99@star.le.ac.uk</email>
    </developer>
  </developers>
  
  <dependencies>
    <dependency>
      <id>axis</id>
      <version>1.1</version>
    </dependency>

    <dependency>
      <id>jax-qname</id>
      <version>UNKNOWN</version>
      <jar>jax-qname.jar</jar>
    </dependency>

    <dependency>
      <id>jaxrpc-api</id>
      <version>1.0.3</version>
    </dependency>

    <dependency>
      <id>jconn</id>
      <version>UNKNOWN</version>
      <jar>jconn2.jar</jar>
    </dependency>

    <dependency>
      <id>junit</id>
      <version>3.8</version>
    </dependency>

    <dependency>
      <id>log4j</id>
      <version>1.2.4</version>
    </dependency>

    <dependency>
      <id>saaj-api</id>
      <version>1.1.1</version>
    </dependency>
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  </build>
  
  <reports>
    <report>
      maven-changelog-plugin
    </report>
    <report>
      maven-changes-plugin
    </report>
    <report>
      maven-checkstyle-plugin
    </report>
    <report>
      maven-clover-plugin
    </report>
    <report>
      maven-developer-activity-plugin
    </report>
    <report>
      maven-file-activity-plugin
    </report>
    <report>
      maven-javadoc-plugin
    </report>
    <report>
      maven-jdepend-plugin
    </report>
    <report>
      maven-junit-report-plugin
    </report>
    <report>
      maven-jxr-plugin
    </report>
    <report>
      maven-license-plugin
    </report>
    <report>
      maven-linkcheck-plugin
    </report>
    <report>
      maven-pmd-plugin
    </report>
    <report>
      maven-tasklist-plugin
    </report>
    <report>
      maven-simian-plugin
    </report>
  </reports>
</project>
