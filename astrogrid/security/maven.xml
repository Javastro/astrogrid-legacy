<?xml version="1.0"?>
<!-- extension maven script -->
<project default="astrogrid-build-site" xmlns:j="jelly:core">

  <!-- custom astrogrid goals for nightly build -->
  <goal name="astrogrid-clean" prereqs="multiproject:clean,clean"/>
  <goal name="astrogrid-deploy-site" 
      prereqs="astrogrid-build-site,site:fsdeploy" />
  <goal name="astrogrid-build-site" prereqs="multiproject:site,site"/>
  <goal name="astrogrid-deploy-snapshot" prereqs="multiproject:deploy-snapshot,jar:deploy-snapshot"/>
  <goal name="astrogrid-build-snapshot" prereqs="multiproject:artifact,jar:snapshot"/>
  <goal name="astrogrid-install-snapshot" prereqs="multiproject:install-snapshot,jar:install-snapshot"/>
  <goal name="astrogrid-deploy-artifact" prereqs="multiproject:deploy,jar:deploy"/>
  <goal name="astrogrid-build-artifact" prereqs="multiproject:artifact,jar:jar"/>
  <goal name="astrogrid-install-artifact" prereqs="multiproject:install,jar:install"/>
	
	
  <preGoal name="java:compile">
    <mkdir dir="${basedir}/target/classes"/>
    <!-- JDepend fails if this dir is not present.  Hack to fix it. -->
  </preGoal>
	
</project>
