<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="maven-project.xsd">

  <pomVersion>3</pomVersion>
  <id>astrogrid-ogsadai-app</id>
  <groupId>org.astrogrid</groupId>
  <name>AstroGrid Data Warehouse OGSA-DAI connection</name>

  <currentVersion>SNAPSHOT</currentVersion>
  
  <organization>
    <name>AstroGrid</name>
    <url>http://www.astrogrid.org</url>
    <logo>http://www.astrogrid.org/images/AGlogo</logo>
  </organization>

  <inceptionYear>2002</inceptionYear>
  <package>org.astrogrid</package> <logo>http://www.astrogrid.org/images/AGlogo</logo> 
  <shortDescription>AstroGrid Warehouse OGSA-DAI Components</shortDescription>

  
  <siteDirectory>/var/www/www/maven/build/warehouse/ogsadai</siteDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/warehouse/ogsadai
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/warehouse/ogsadai
    </developerConnection>
  </repository>

  <developers>
    <developer>
      <name>Kona Andrews</name>
      <id>kea</id>
      <email>kea@ast.cam.ac.uk</email>
    </developer>

    <developer>
      <name>Elizabeth Auden</name>
      <id>eca</id>
      <email>eca@mssl.ucl.ac.uk</email>
    </developer>

    <developer>
      <name>Clive Page</name>
      <id>cgp</id>
      <email>cgp@star.le.ac.uk</email>
    </developer>

    <developer>
      <name>Guy Rixon</name>
      <id>gtr</id>
      <email>gtr@ast.cam.ac.uk</email>
    </developer>
  </developers>

  <dependencies>
  
    <!-- This is used to build the executable JAR that is the final
         product of this sub-project. -->
    <dependency>
      <groupId>maven</groupId>
      <type>plugin</type>
      <artifactId>maven-javaapp-plugin</artifactId>
      <version>1.2</version>
    </dependency>

    <dependency>
      <id>wsdl4j</id>
      <version>1.0</version>
    </dependency>

    <dependency>
      <id>saaj</id>
      <version>1.0</version>
      <jar>saaj.jar</jar>
    </dependency>

    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
    </dependency>

    <dependency>
      <id>commons-discovery</id>
      <version>20030211.213356</version>
      <!--<version>SNAPSHOT</version>-->
    </dependency>
    
    <dependency>
      <id>jaxrpc-api</id>
      <version>1.0.3</version>
    </dependency>
    
    <dependency>
      <id>xml-apis</id>
      <version>1.0.b2</version>
    </dependency>
    
    <dependency>
      <id>log4j</id>
      <version>1.2.4</version>
    </dependency>

    <dependency>
      <id>xercesImpl</id>
      <version>2.1.0</version>
    </dependency>

    <dependency>
      <id>ogsa</id>
      <version>3.0.2</version>
    </dependency>

    <dependency>
      <id>axis-ogsa</id>
      <version>3.0.2</version>
    </dependency>

    <dependency>
      <id>ogsadai</id>
      <version>3.1</version>
    </dependency>

    <dependency>
      <id>cog-axis</id>
      <version>3.0.2</version>
    </dependency>

    <dependency>
      <id>cog-jglobus</id>
      <version>3.0.2</version>
    </dependency>
   
    <dependency>
      <id>xmlsec</id>
      <version>gt3.0.2</version>
    </dependency>

  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>

      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
          <includes>
            <include>**/*.xml</include>
	    <include>**/*.properties</include>
	    <include>**/*.sql</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>

      <!-- Take configuration files from the source branch
           for inclusion in the product. -->
      <resource>
        <directory>${basedir}/src</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.properties</include>
            <include>config/*</include>
          </includes>
      </resource>

      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>schema/*.xsd</include>
          <include>schema/*.dtd</include>
        </includes>
      </resource>
    </resources>

  </build>

  <reports>
    <report>
      maven-changelog-plugin
    </report>
    <report>
      maven-changes-plugin
    </report>
    <report>
      maven-checkstyle-plugin
    </report>
    <report>
      maven-clover-plugin
    </report>
    <report>
      maven-developer-activity-plugin
    </report>
    <report>
      maven-file-activity-plugin
    </report>
    <report>
      maven-javadoc-plugin
    </report>
    <report>
      maven-jdepend-plugin
    </report>
    <report>
      maven-junit-report-plugin
    </report>
    <report>
      maven-jxr-plugin
    </report>
    <report>
      maven-license-plugin
    </report>
    <report>
      maven-linkcheck-plugin
    </report>
    <report>
      maven-pmd-plugin
    </report>
    <report>
      maven-tasklist-plugin
    </report>
    <report>
      maven-simian-plugin
    </report>
  </reports>
</project>
