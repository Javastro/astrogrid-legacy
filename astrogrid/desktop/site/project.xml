<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

    <extend>${basedir}/../../maven-base/project.xml</extend>
        <id>ar</id>
        <currentVersion>${astrogrid.desktop.version}</currentVersion>
        <name>Astro Runtime Release Site</name>
        <description>
	  Astro Runtime Release Site
	</description>
 
        <build>
                <sourceDirectory/>
        </build>
        <dependencies>
<!-- need to do some name mangling here, to ensure that I've got a handle
on all of the resources - even if the artifactId is the same -->
<!-- javadoc for interface -->
   	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>acr-interface</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>javadoc.jar</type>
		<properties>
			<position>.</position>
<!--			<unzip>true</unzip> -->
		</properties>
	</dependency>

	<!-- interface distro -->
	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>acr-interface-distro</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>zip</type>
		<jar>acr-interface-${astrogrid.desktop.version}.zip</jar>
		<properties>
			<position>.</position>
		</properties>
	</dependency>	
	
<!-- examples -->
	 <dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>ar-script-examples</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<properties>
			<position>.</position>
			<rename>ar-script-examples.zip</rename>
		</properties>
	</dependency>	
	

	
	<!-- standalone-apps -->
	
	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>acr-app</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>app</type>
		<jar>acr-${astrogrid.desktop.version}.jar</jar>
		<properties>
			<position>apps</position>
		</properties>
	</dependency>

	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>asr-app</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>app</type>
		<jar>asr-${astrogrid.desktop.version}.jar</jar>
		<properties>
			<position>apps</position>
		</properties>		
	</dependency>

	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>workbench-app</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>app</type>
		<jar>workbench-${astrogrid.desktop.version}.jar</jar>
		<properties>
			<position>apps</position>
		</properties>		
	</dependency>
	
	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>plastic-hub-app</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>app</type>
		<jar>plastic-hub-${astrogrid.desktop.version}.jar</jar>
		<properties>
			<position>apps</position>
		</properties>		
	</dependency>
	
	<!-- app distros -->
	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>acr</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>zip</type>
		<properties>
			<position>zips</position>
		</properties>		
	</dependency>

	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>asr</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>zip</type>
		<properties>
			<position>zips</position>
		</properties>		
	</dependency>

	  	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>workbench</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>zip</type>
		<properties>
			<position>zips</position>
		</properties>		
	</dependency>
	
	<dependency>
		<groupId>org.astrogrid</groupId>
		<artifactId>plastic-hub</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<type>zip</type>
		<properties>
			<position>zips</position>
		</properties>		
	</dependency>
	
	
    </dependencies>
