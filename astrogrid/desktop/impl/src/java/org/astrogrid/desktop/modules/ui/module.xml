	<component name="applicationLauncher" 
		implementationClass="org.astrogrid.desktop.modules.ui.ApplicationLauncherImpl" 
		interfaceClass="org.astrogrid.acr.ui.ApplicationLauncher" >
		<description>Launch CEA Applications</description>
	<property>
			<key>system.ui.menu.links</key>
			<value>					
				<link text="Application Documentation	"				
					icon="info_obj.gif"
					toolTipText="Description of available tools"
					url="http://wiki.astrogrid.org/bin/view/Astrogrid/ToolDocumentation"/>					
			</value>
		</property>			
	<property>
		<key>icon</key>
		<value>thread_view.gif</value>
	</property>				
		<method name="show">
			<description>Run the Launcher GUI </description>
			<property>
				<key>system.ui.menu.entry</key>
				<value>Run..</value>
	<property>
		<key>icon</key>
		<value>run_tool.gif</value>
	</property>					
			</property>			
		
		</method>
		<method name="hide">
			<description>Hide the Monitor GUI </description>

		</method>		
	
		</component>		
		
			<component name="jobMonitor" 
		implementationClass="org.astrogrid.desktop.modules.ui.JobMonitorImpl" 
		interfaceClass="org.astrogrid.acr.ui.JobMonitor" >
		<description>View progress of jobs and applications</description>
	<property>
		<key>icon</key>
		<value>thread_and_monitor_view.gif</value>
	</property>		
	  <method name="displayApplicationTab">
			<descripiption>bring the application tab uppermost</descripiption>
		</method>
		<method name="displayJesTab">
			<description>bring the jes tab uppermost</description>
		</method>		
		<method name="addApplication">
			<description>Provide the execution id of a running CEA application to add it to the job monitor</description>
			<property>
				<key>system.ui.menu.entry</key>
				<value>Add a running application to the monitor</value>			
			</property>			
			<property>
		<key>icon</key>
		<value>add_obj.gif</value>
	</property>			
			<parameter name="name"><description>Descriptive name of the application</description></parameter>
			<parameter name="executionId"><description>ExecutionID for this application</description></parameter>		
			</method>
		<method name="show">
			<description>Run the Monitor GUI </description>
			<property>
				<key>system.ui.menu.entry</key>
				<value>Run..</value>			
			</property>			
			<property>
		<key>icon</key>
		<value>run_tool.gif</value>
	</property>		
		</method>
		<method name="hide">
			<description>Hide the Monitor GUI </description>

		</method>		
		<method name="refresh">
			<description>Refresh the job list </description>

		</method>			
		</component>
		
