                <!-- modifications to compile the hub portion -->
                <sourceModifications>
                  <sourceModification>
                    <className>neverPresent</className>
                    <excludes>
                    	<!--  components and framework we don't want -->
                      <exclude>org/astrogrid/desktop/*.java</exclude>
                      <exclude>org/astrogrid/desktop/modules/ag/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/ui/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/ui/comp/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/util/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/cds/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/ivoa/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/nvo/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/background/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/system/HelpServerImpl.java</exclude>
                      <exclude>org/astrogrid/desktop/modules/system/SwingSetup.java</exclude>
                      <exclude>org/astrogrid/desktop/modules/dialogs/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/adqlEditor/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/workflowBuilder/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/votech/**</exclude>
                      <exclude>org/astrogrid/desktop/protocol/httpclient/**</exclude>
						<!--  test classes we can't compile or don't want -->
                      <exclude>**/*All*Tests*</exclude>
                      <exclude>**/*SystemTest*</exclude>
                      <exclude>**/*TransportTest*</exclude>
                      <exclude>**/*UITest*</exclude>
                  	</excludes>
                  	
                  </sourceModification>
               	</sourceModifications>
                <resources>
                        <resource>
                                <directory>${basedir}/../src/java</directory>
                                <!-- todo: trim these more -->
                                <includes>
                                        <include>**/hivemind/*.xml</include>
                                        <include>default-log4j.properties</include>                                        
                                        <include>org/astrogrid/desktop/icons/*.png</include>
          								<include>org/astrogrid/desktop/icons/*.gif</include>
                                        <include>org/astrogrid/desktop/modules/system/transformers/*.xsl</include>
                                        <include>org/astrogrid/plastic-splash.gif</include>
                                </includes>
                        </resource>
                </resources>
        </build>


