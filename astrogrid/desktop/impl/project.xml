        <build>
                <sourceDirectory>src/java</sourceDirectory>
                <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
                <unitTest>
                        <includes>								
                                <include>**/*Test.java</include>
                        </includes>
			<excludes>
				<!-- can't really run these automatically - needs user login -->
				<exclude>**/*SystemTest.java</exclude>				
			</excludes>
                        <resources>
                                <resource>
                                        <directory>${basedir}/test/java</directory>
                                        <includes>
                                                <include>**/*.properties</include>
                                                <include>**/*.xml</include>
                                        </includes>
                                </resource>								
                        </resources>
                </unitTest>
                <resources>
                        <resource>
                                <directory>${basedir}/src/java</directory>
                                <includes>
                                        <include>*.properties</include>
										<include>*.hs</include>
                                        <include>**/*.xml</include>
                                        <include>**/*.png</include>
										<include>javahelp/**</include>
					<include>**/*.html</include>
                                        <include>**/*.xsl</include>
          				<include>**/*.gif</include>
                                </includes>
                        </resource>
						<resource>
								<directory>${basedir}/target/index</directory>
								<includes>
									<include>**/*</include>
								</includes>
						</resource>
                </resources>
        </build>

