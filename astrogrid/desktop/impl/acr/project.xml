<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

    <extend>${basedir}/../asr/project.xml</extend>
        <artifactId>acr</artifactId>
        <currentVersion>${astrogrid.desktop.version}</currentVersion>
        <name>Astro Runtime (UI Client version)</name>
        <description>
	 Astro Runtime - server version
	</description>
        <shortDescription>Astro Client Runtime</shortDescription>
 
        <build>
                <sourceDirectory>${basedir}/../src/java</sourceDirectory>
                <!-- modifications to compile the acr portion -->
                <sourceModifications>
                  <sourceModification>
                    <className>${ifBuildingACR}</className>
                    <excludes>
                      <exclude>org/astrogrid/desktop/*.java</exclude>
                      <exclude>org/astrogrid/desktop/modules/ui/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/workflowBuilder/**</exclude>
                      <exclude>org/astrogrid/desktop/modules/dialogs/ScriptDialog.java</exclude>
                      <exclude>org/astrogrid/desktop/modules/ivoa/SkyNodeImpl.java</exclude>                     
                  	</excludes>
                  </sourceModification>
               	</sourceModifications>
                <resources>
                        <resource>
                                <directory>${basedir}/../src/java</directory>
                                <includes>
                                        <include>**/hivemind/*.xml</include>
                                        <include>astrogrid.properties</include>
                                        
                                        <!-- todo - move help docs into separate project. -->
                                        <!-- keep out - mostly ui docs <include>javahelp/**</include>
                                        -->
                                        <include>org/astrogrid/desktop/modules/system/transformers/*.xsl</include>
                                        <include>org/astrogrid/acr-splash.png</include>
          								<include>org/astrogrid/desktop/icons/*.gif</include> 
          								<include>org/astrogrid/desktop/icons/*.png</include> 
          						</includes>
                        </resource>
                        
                </resources>
        </build>

        <dependencies>
        
 
  <!-- brower control - only use for non-jnlp distribution -->
 	<dependency>
 		<artifactId>BrowserLauncher2</artifactId>
 		<groupId>BrowserLauncher2</groupId>
 		<version>10rc4</version>
 		<url>http://browserlaunch2.sourceforge.net/</url>
 		<properties>
 		<!-- don't jnlp.jar -->
 			<dist.bundle>true</dist.bundle>
 		</properties>
 	</dependency>
 	
 	        
<!-- online help system -->

	<dependency> <!-- no extension - as liable to change with acr -->
		<groupId>org.astrogrid</groupId>
		<artifactId>acr-interface-javahelp</artifactId>
		<version>${astrogrid.desktop.version}</version>
		<properties>
			<jnlp.jar>true</jnlp.jar>			
			<dist.bundle>true</dist.bundle>			
		</properties>
	</dependency>
	
 <dependency> <!-- in an extension -->
	 <artifactId>jhall</artifactId>
	 <groupId>javahelp</groupId>
	 <version>2.0.02</version>
	 <properties>
		 <jnlp.extension.site>software.astrogrid.org</jnlp.extension.site>
		 <jnlp.extension.dir>/jnlp/javahelp</jnlp.extension.dir>
	<jnlp.extension.jnlp>javahelp.jnlp</jnlp.extension.jnlp>
	<dist.bundle>true</dist.bundle>	
	 </properties>
	 <jar>jhall.jar</jar>
 </dependency>
 <!-- end of help system --> 
 
 <!-- text editing extension -->
  <dependency>
	 <groupId>jedit</groupId>
	 <artifactId>jedit-syntax</artifactId>
	 <version>1.0</version>
	 <type>jar</type>
	 <properties>
		 <jnlp.extension.site>software.astrogrid.org</jnlp.extension.site>
		 <jnlp.extension.dir>/jnlp/editor</jnlp.extension.dir>
	<jnlp.extension.jnlp>editor.jnlp</jnlp.extension.jnlp>	 
		 <dist.bundle>true</dist.bundle>
	 </properties>
	</dependency>
 
    
    <!-- xmlbeans for adql -->
 <dependency>
   <!-- This is the minimum required for xmlbeans.
          If we expand usage (eg: use of xpath) more jars will be required -->
	 <artifactId>xbean</artifactId>
	 <groupId>xmlbeans</groupId>
	 <version>2.0.0</version>
	 <type>jar</type>
 <properties>
		 <dist.bundle>true</dist.bundle>
		 <jnlp.extension.site>software.astrogrid.org</jnlp.extension.site>
		 <jnlp.extension.dir>/jnlp/adqlbeans</jnlp.extension.dir>
		 <jnlp.extension.jnlp>adqlbeans.jnlp</jnlp.extension.jnlp>
	 </properties>			 
 </dependency>
  <dependency>
     <!-- These are the generated beans for adql -->
	 <artifactId>astrogrid-adql_v1_0a1</artifactId>
	 <groupId>astrogrid-common</groupId>
	 <version>${astrogrid.adql_v1_0a1.version}</version>
	 <type>jar</type>
	 <properties>
		 <dist.bundle>true</dist.bundle>
	 </properties>		 
 </dependency>
 <!-- end beans for adql -->
   
 
    </dependencies>
</project>
