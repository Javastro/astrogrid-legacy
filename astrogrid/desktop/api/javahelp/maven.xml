<?xml version="1.0"?>
<!-- extension maven script -->
<project   xmlns:j="jelly:core" xmlns:maven="jelly:maven" >

	
	<goal name="java2help">
		<echo>hello from inner project</echo>
	</goal>
	
	<preGoal name="jar:jar">
		<java classpathref="maven.dependency.classpath"
		      fork="true"
		      failonerror="true"
		      classname="com.aurigalogic.javadoc2help.cmdline.Converter"
		      args='-jhelp -src ${basedir}/../target/docs/apidocs -dest ${basedir}/target/classes/acrjavahelp -param "index_files=y"'
		      >
			<classpath>
				<classpath refid="maven.dependency.classpath"/>
				<pathelement location="${basedir}/bin" />					     
			</classpath>
		</java>
	</preGoal>

</project>

