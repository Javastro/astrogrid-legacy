<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

    <extend>../../maven-base/project.xml</extend>
        <artifactId>acr-interface</artifactId>
        <currentVersion>${astrogrid.desktop.version}</currentVersion>
        <name>Astronomy Client Runtime Interfaces</name>
        <description>
	 See xdocs.
		  </description>
        <shortDescription>Astronomy Client Runtime Interfaces</shortDescription>
    	<package>org</package> <!-- have to override that in maven-base to include org.votech-->
        <build>
                <sourceDirectory>src/java</sourceDirectory>
                <resources>
                        <resource>
                                <directory>${basedir}/src/java</directory>
                                <includes>
                                        <include>**/*.xml</include>
                                        <include>**/*.png</include>
          				<include>**/*.gif</include>
                                </includes>
				<excludes>
					<exclude>**/doc-files/*</exclude>
				</excludes>
                        </resource>
                </resources>
        </build>

<dependencies>

<!-- supporting lib that makes rmi nicer -->
 
 <dependency>
	<artifactId>rmi-lite</artifactId>
	<groupId>rmilite</groupId>
	<version>1.0</version>
	<properties>
		<dist.bundle>true</dist.bundle>
	</properties>
</dependency>

<dependency>
	<artifactId>commons-logging</artifactId>	
	<groupId>commons-logging</groupId>	
	<version>1.0.3</version>	
	<url>http://jakarta.apache.org/commons/</url>	
	<properties>
		<dist.bundle>true</dist.bundle>
	</properties>	
    </dependency>

    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xerces</artifactId>
      <version>2.4.0</version>
      <type>jar</type>
      <url>http://xml.apache.org/</url>
      <properties>
	      <dist.bundle>true</dist.bundle>
	</properties>      
    </dependency>

    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>1.0.b2</version>
      <type>jar</type>
      <url>http://xml.apache.org/</url>
      <properties>
	      <dist.bundle>true</dist.bundle>
	</properties>      
	</dependency>

<!-- only needed for 'opt' package -->
<dependency>
	<groupId>picocontainer</groupId>
	<artifactId>picocontainer</artifactId>
	<version>1.1</version>
	<type>jar</type>
	<properties>
		<dist.bundle>true</dist.bundle>
	</properties>	
 </dependency>
 
    </dependencies>
</project>
