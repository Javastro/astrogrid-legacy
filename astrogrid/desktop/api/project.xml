<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

    <extend>../../maven-base/project.xml</extend>
        <artifactId>acr-interface</artifactId>
        <currentVersion>${astrogrid.desktop.version}</currentVersion>
        <name>Astro Runtime Interfaces</name>
        <description>
	Subproject for the public API to AR.
	Run % maven astrogrid-install-artifact
	 to create the pre-requisites required for the ../impl builds
	(also need to do same in ../userdocs). Alternatively, run 
	% maven install-materials
	to do all this from the root project.
		  </description>
        <shortDescription>Astro Runtime Interfaces</shortDescription>
    	<package>org</package> <!-- have to override that in maven-base to include org.votech-->
        <build>
                <sourceDirectory>src/java</sourceDirectory>
                <resources>
                        <resource>
                                <directory>${basedir}/src/java</directory>
                                <includes>
                                        <include>**/*.xml</include>
                                        <include>**/*.png</include>
          				<include>**/*.gif</include>
                                </includes>
				<excludes>
					<exclude>**/doc-files/*</exclude>
				</excludes>
                        </resource>
                </resources>
        </build>

<dependencies>

<!-- supporting lib that makes rmi nicer -->
 
 <dependency>
	<artifactId>rmi-lite</artifactId>
	<groupId>rmilite</groupId>
	<version>1.0</version>
	<properties>
		<rmi.bundle>true</rmi.bundle>
	</properties>
</dependency>

<dependency>
	<artifactId>commons-logging</artifactId>	
	<groupId>commons-logging</groupId>	
	<version>1.0.3</version>	
	<url>http://jakarta.apache.org/commons/</url>	
	<properties>
		<rmi.bundle>true</rmi.bundle>
		<xmlrpc.bundle>true</xmlrpc.bundle>
	</properties>	
    </dependency>

    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xerces</artifactId>
      <version>2.4.0</version>
      <type>jar</type>
      <url>http://xml.apache.org/</url>
      <properties>
	      <rmi.bundle>true</rmi.bundle>
	</properties>      
    </dependency>

    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>1.0.b2</version>
      <type>jar</type>
      <url>http://xml.apache.org/</url>
      <properties>
	      <rmi.bundle>true</rmi.bundle>
	</properties>      
	</dependency>

<!--  not needed for build - just for packaging -->
<dependency>
	<groupId>xmlrpc</groupId>
	<artifactId>xmlrpc</artifactId>
	<version>1.2-b1</version>
	<type>jar</type>
	<properties>
		<xmlrpc.bundle>true</xmlrpc.bundle>			
	</properties>
</dependency>

	<dependency>
		<groupId>commons-httpclient</groupId>
		<artifactId>commons-httpclient</artifactId>
		<version>2.0.2</version>
		<properties>
			<xmlrpc.bundle>true</xmlrpc.bundle>
		</properties>		
	</dependency>
 
	<dependency>
		<groupId>commons-codec</groupId>
		<artifactId>commons-codec</artifactId>
		<version>1.3</version>
		<properties>
			<xmlrpc.bundle>true</xmlrpc.bundle>
		</properties>		
	</dependency>
	
 	<!-- only used within build -->
	<dependency>
		<groupId>jeldoclet</groupId>
		<artifactId>jeldoclet</artifactId>
		<version>1.0</version>
		<type>jar</type>
	</dependency>
	<dependency>
		<groupId>xalan</groupId>
		<artifactId>xalan</artifactId>
		<version>2.4.1</version>
		<type>jar</type>
	</dependency>

    </dependencies>
</project>
