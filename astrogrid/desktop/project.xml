                                <includes>
                                        <include>*.properties</include>
                                        <include>**/*.xml</include>
                                        <include>**/*.png</include>
                                                                                <include>**/*.xsl</include>
          <include>**/*.gif</include>
                                </includes>
                        </resource>
                </resources>
        </build>

