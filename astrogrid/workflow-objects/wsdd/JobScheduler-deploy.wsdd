<!-- Use this file to deploy some handlers/chains and services      -->
<!-- Two ways to do this:                                           -->
<!--   java org.apache.axis.client.AdminClient deploy.wsdd          -->
<!--      after the axis server is running                          -->
<!-- or                                                             -->
<!--   java org.apache.axis.utils.Admin client|server deploy.wsdd   -->
<!--      from the same directory that the Axis engine runs         -->

<deployment
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java">

  <!-- Services from JobSchedulerService WSDL service -->

  <service name="JobSchedulerService" provider="java:RPC" style="document" use="literal">
      <parameter name="wsdlTargetNamespace" value="urn:jes/jobscheduler/v1"/>
      <parameter name="wsdlServiceElement" value="JobSchedulerService"/>
      <parameter name="wsdlServicePort" value="JobSchedulerService"/>
      <parameter name="className" value="org.astrogrid.jes.delegate.v1.jobscheduler.JobSchedulerServiceSoapBindingImpl"/>
      <parameter name="wsdlPortType" value="JobScheduler"/>
      <operation name="scheduleNewJob" qname="scheduleNewJob" >
        <parameter name="request" type="tns:jobURN" xmlns:tns="urn:jes/types/v1"/>
      </operation>
      <operation name="resumeJob" qname="resumeJob" >
        <parameter name="jobInfo" type="tns:JobInfo" xmlns:tns="urn:jes/types/v1"/>
      </operation>
      <parameter name="allowedMethods" value="resumeJob scheduleNewJob"/>
      <parameter name="scope" value="Application"/>

      <typeMapping
        xmlns:ns="urn:jes/types/v1"
        qname="ns:JobInfo"
        type="java:org.astrogrid.jes.types.v1.JobInfo"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle=""
      />
      <typeMapping
        xmlns:ns="urn:jes/types/v1"
        qname="ns:jobURN"
        type="java:org.astrogrid.jes.types.v1.JobURN"
        serializer="org.apache.axis.encoding.ser.SimpleSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.SimpleDeserializerFactory"
        encodingStyle=""
      />
      <typeMapping
        xmlns:ns="urn:jes/types/v1"
        qname="ns:status"
        type="java:org.astrogrid.jes.types.v1.Status"
        serializer="org.apache.axis.encoding.ser.EnumSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.EnumDeserializerFactory"
        encodingStyle=""
      />
  </service>
</deployment>
