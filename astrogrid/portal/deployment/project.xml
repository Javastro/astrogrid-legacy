<project>
    <extend>../maven/project-nodependencies.xml</extend>
    <artifactId>astrogrid-portal-deploy-script</artifactId>
    <name>Portal Installation Script</name>
    <organization/>
    <description>This project contains everything necessary to install the application, when run as a stand-alone ant script.  This is then bundled into a jar for installation on a webserver from where it can be accessed by other applications.
	</description>
    <shortDescription>Subproject to hold ant scripts and resources specific to the portal installation</shortDescription>
    <repository/>
    <build>
        <resources>
            <resource>
                <directory>ant</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
    <dependencies>
		<dependency>
      <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-pal-query</artifactId>
            <version>${astrogrid.pal.version}</version>
            <type>jar</type>
        </dependency>	  
     <!-- for writing XML -->
       <dependency>
          <artifactId>astrogrid-xml</artifactId>
          <groupId>org.astrogrid</groupId>
          <version>${astrogrid.xml.stable}</version>
       </dependency>	  				
       <dependency>
          <artifactId>astrogrid-utils</artifactId>
          <groupId>org.astrogrid</groupId>
          <version>${astrogrid.utils.stable}</version>
		   <properties>
            	<war.bundle>true</war.bundle>
            </properties>
       </dependency>
        <dependency>
            <groupId>catalina-ant</groupId>
            <artifactId>catalina-ant</artifactId>
            <version>5.0.18</version>
            <properties/>
        </dependency>
        <!--required to use the Ant 1.6 input task instead of the Ant 1.5.3
			one...this requirement will probably go away come Maven 1.1-->
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant1.6tasks</artifactId>
            <version>1.6</version>
        </dependency>
    </dependencies>
    <properties/>
</project>