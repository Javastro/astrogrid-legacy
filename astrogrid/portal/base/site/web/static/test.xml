<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ag-div SYSTEM "test/ag.dtd">

<ag-div>
  <ag-link href="/astrogrid-portal/test.css" rel="stylesheet" type="text/css"/>
  <ag-onload function="ag_body_panelbar_toggle()"/>
  
  <div>
    <span id="ag-body-panelbar-toggle" onclick="ag_body_panelbar_toggle()">
      H<br/>
      e<br/>
      l<br/>
      p
    </span>

    <div id="ag-body-panelbar">
<!--
      <div id="ag-body-panelbar-header">
        Help Panel
      </div>
-->
      
      <div class="ag-body-panelbar-tab">
        <span class="ag-body-panelbar-tab" onclick="ag_body_panelbar_tab_click('ag-body-panelbar-body-1');">
          Login
        </span>
        <span class="ag-body-panelbar-tab" onclick="ag_body_panelbar_tab_click('ag-body-panelbar-body-2');">
          Registration
        </span>
      </div>
  
      <div id="ag-body-panelbar-content">
        <div id="ag-body-panelbar-body-1" class="ag-body-panelbar-content">
          To log in, please type the username and password you specified at registration time.
        </div>
        
        <div id="ag-body-panelbar-body-2" class="ag-body-panelbar-content">
          Registration assigns you a unique username and password which you can then use to access restricted areas of the site.
        </div>
      </div>
    </div>

    <div id="ag-body-content">
      <div id="ag-body-content-logo">
        <img src="/astrogrid-portal/grid_trans_wording.gif" alt="GridLogo" hspace="0" vspace="0" align="middle"/>
      </div>

      <div id="ag-body-content-text">
        This portal's community branch is star.le.ac.uk.
        
        <p/>
        
        For access to this facility please consult the Astrogrid Administrator <br/>
        Administrator for this community is Keith Noddle <br/>
        Administrator's Email for this community is ktn@star.le.ac.uk <br/>

        <p/>
        
        <div>
          <form action="">
            Username:<br/>
            &nbsp;&nbsp;<input id="username" type="text"/><br/>
            Password:<br/>
            &nbsp;&nbsp;<input id="password" type="text"/><br/>
            <p/>
            <input type="submit" value="Login"/>
          </form>
        </div>

        <p/>
        
        <div>
          If you are new to Astrogrid please sign in here click: <a href="">Register</a>
        </div>
      </div>
    </div>
  </div>
</ag-div>
