<?xml version="1.0" encoding="UTF-8"?>
<!-- -->
<!DOCTYPE project [
  <!ENTITY cocoon-deps SYSTEM "cocoon-dependencies.xml">
]>
<!-- -->
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="maven-project.xsd">
  <pomVersion>3</pomVersion>
  
  <id>astrogrid-portal</id>
  <name>AstroGrid Portal</name>
  <groupId>astrogrid-portal</groupId>

  <currentVersion>HEAD</currentVersion>
  
  <organization>
    <name>AstroGrid</name>
    <url>http://www.astrogrid.org</url>
  </organization>
  
  <inceptionYear>2002</inceptionYear>
  
  <package>org.astrogrid.portal</package>
  
  <description>
    The AstroGrid Web Portal: access to AstroGrid via Cocoon.
  </description>
  <shortDescription>AstroGrid Web Portal</shortDescription>
  
  <url>http://www.astrogrid.org</url>
  
  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel/astrogrid:portal
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.user}@cvs.astrogrid.org:/devel/astrogrid:portal
    </developerConnection>
  </repository>
  
  <developers>
    <developer>
      <name>Peter Shillan</name>
      <id>gps</id>
      <email>gps@roe.ac.uk</email>
    </developer>

    <developer>
      <name>Pedro Contreras</name>
      <id>pcontrer</id>
      <email>p.contreras@qub.ac.uk</email>
    </developer>

    <developer>
      <name>Phillip Nicolson</name>
      <id>pjn3</id>
      <email>pjn3@star.le.ac.uk</email>
    </developer>

    <developer>
      <name>Roy Platon</name>
      <id>rtp</id>
      <email>R.T.Platon@rl.ac.uk</email>
    </developer>
  </developers>
  
  <dependencies>
    <!--
      Utilities.
      -->
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>

    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!--
      Cocoon.
      -->
      &cocoon-deps;
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/java</unitTestSourceDirectory>
  </build>
</project>
