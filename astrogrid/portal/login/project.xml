<?xml version="1.0" encoding="UTF-8"?>
<!-- -->
<!DOCTYPE project [
  <!ENTITY cocoon-deps SYSTEM "../cocoon-dependencies-nowar.xml">
]>
<!-- -->
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-login</id>
  <name>AstroGrid Portal Login</name>

  <dependencies>
    <!-- Common -->
    <dependency>
      <groupId>astrogrid-common</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

		<!--+
			| The JConfig jars.
			+-->
		<dependency>
			<groupId>jconfig</groupId>
			<artifactId>jconfig</artifactId>
			<version>2.2</version>
			<type>jar</type>
			<url>http://www.jconfig.org/</url>
			<properties>
				<axis.war>true</axis.war>
			</properties>
		</dependency>

		<!--+
			| Community client jars
			+-->
		<dependency>
			<groupId>astrogrid-community</groupId>
			<artifactId>astrogrid-community-auth-client</artifactId>
			<version>1.4.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>astrogrid-community</groupId>
			<artifactId>astrogrid-community-policy-client</artifactId>
			<version>1.4.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
    
    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    &cocoon-deps;
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
  </build>
</project>
