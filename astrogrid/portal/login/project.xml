<?xml version="1.0" encoding="UTF-8"?>
<!-- -->
<!DOCTYPE project [
  <!ENTITY cocoon-deps SYSTEM "../cocoon-dependencies-nowar.xml">
]>
<!-- -->
<project
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../maven-project.xsd">
	<extend>../project.xml</extend>

	<id>astrogrid-portal-login</id>
	<name>AstroGrid Portal Login</name>

	<dependencies>
		<!--+
			| Astrogrid Common
			+-->
		<dependency>
			<groupId>org.astrogrid</groupId>
			<artifactId>astrogrid-common</artifactId>
			<version>SNAPSHOT</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<dependency>
			<groupId>org.astrogrid</groupId>
			<artifactId>astrogrid-portal-common</artifactId>
			<version>SNAPSHOT</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<!--+
			| Community client jars
			+-->
		<dependency>
			<groupId>org.astrogrid</groupId>
			<artifactId>astrogrid-community-client</artifactId>
			<version>SNAPSHOT</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>org.astrogrid</groupId>
			<artifactId>astrogrid-community-common</artifactId>
			<version>SNAPSHOT</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-resolver</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-registry-client</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-registry-common</artifactId>
            <version>SNAPSHOT</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <!--+
        	| The JConfig jars.
        	+-->
		<dependency>
			<groupId>jconfig</groupId>
			<artifactId>jconfig</artifactId>
			<version>2.2</version>
			<type>jar</type>
			<url>http://www.jconfig.org/</url>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
        <dependency>
            <groupId>jaxrpc-api</groupId>
            <artifactId>jaxrpc-api</artifactId>
            <version>1.0.3</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.1</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
		<!--+
		    | Both these are needed for javamail
		    +-->
		<dependency>
            <groupId>sun</groupId>
			<artifactId>mail</artifactId>
			<version>1.3.1</version>
			<properties>
				<war.bundle>true</war.bundle>
            </properties>
		</dependency>
		<dependency>
            <groupId>activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.0.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<!--+
		    | Mock maker needed only for testing
		    +-->
		 <dependency>
            <groupId>mmmockobjects</groupId>
			<artifactId>mmmockobjects</artifactId>
			<version>1.11.0</version>
			<properties>
				<war.bundle>false</war.bundle>
			</properties>
		</dependency>
		    

		<!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
		&cocoon-deps;

	</dependencies>

	<build>
		<sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/junit</unitTestSourceDirectory>
    	<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
