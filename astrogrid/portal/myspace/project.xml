<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"    
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-myspace</id>
  <name>AstroGrid Portal MySpace Project</name>

  <dependencies>
    <!-- Common -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    
    <!-- Portal Common -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-portal-common</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    
    <!-- MySpace -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-mySpace</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- SOAP for Java -->
    <dependency>
      <groupId>saaj-api</groupId>
      <artifactId>saaj-api</artifactId>
      <version>1.1.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- Servlet API -->
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.2</version>
    </dependency>

    <!-- Mock Objects -->
    <dependency>
      <groupId>mmmockobjects</groupId>
      <artifactId>mmmockobjects</artifactId>
      <version>1.11.0</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    <xi:include href="../cocoon-dependencies-nowar.xml"/>
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    
    <unitTest>
      <includes>
        <include>**/*.java</include>
      </includes>
      <excludes>
        <exclude>mock/**/*.java</exclude>
        <exclude>org/astrogrid/portal/myspace/acting/framework/BaseHandlerTest.java</exclude>
      </excludes>
    </unitTest>
  </build>
</project>
