<?xml version="1.0"?>
<agp:menu-def
    name="myspace-menu"
    xmlns:agp="http://www.astrogrid.org/portal">
  <agp:menu
      contents="File"
      contents-hover="File"
      uri=""
      target="_self"
      status-text="File...">
    <agp:item
        contents="New Container"
        contents-hover="New Container"
        uri='javascript:void(myspace_submit_form("myspace-explorer-form", "myspace-action", "myspace-new-container"));'
        target="_self"
        status-text="Create a new container"/>
    <agp:item
        contents="Delete"
        contents-hover="Delete"
        uri='javascript:void(myspace_submit_form("myspace-explorer-form", "myspace-action", "myspace-delete"));'
        target="_self"
        status-text="Delete a MySpace Item"/>
    <agp:item
        contents="Rename"
        contents-hover="Rename"
        uri='javascript:void(myspace_submit_form("myspace-explorer-form", "myspace-action", "myspace-move"));'
        target="_self"
        status-text="Rename a MySpace Item"/>
    <agp:item
        contents="Download"
        contents-hover="Download"
        uri='javascript:void(myspace_download("myspace-clipboard-url"));'
        target="_self"
        status-text="Download a MySpace Item"/>
    <agp:item
        contents="Properties"
        contents-hover="Properties"
        uri='javascript:void(myspace_properties("myspace-clipboard"));'
        target="_self"
        status-text="Show the properties of a MySpace item"/>
  </agp:menu>

  <agp:menu
      contents="Edit"
      contents-hover="Edit"
      uri=""
      target="_self"
      status-text="Edit...">
    <agp:item
        contents="Copy"
        contents-hover="Copy"
        uri='javascript:void(myspace_clipboard_copy("myspace-clipboard", "myspace-clipboard-copy"));'
        target="_self"
        status-text="Store MySpace item in the clipboard"/>

    <agp:item
        contents="Paste"
        contents-hover="Paste"
        uri='javascript:void(myspace_clipboard_paste("myspace-src", "myspace-clipboard-copy", "myspace-dest"));'
        target="_self"
        status-text="Paste stored MySpace item into a new location"/>

    <agp:item
        contents="Move"
        contents-hover="Move"
        uri='javascript:void(myspace_clipboard_move("myspace-src", "myspace-clipboard-copy", "myspace-dest"));'
        target="_self"
        status-text="Move stored MySpace item into a new location"/>
    </agp:menu>
</agp:menu-def>
