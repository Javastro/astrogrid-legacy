<?xml version="1.0" encoding="UTF-8"?>
<!-- -->
<!DOCTYPE project [
  <!ENTITY cocoon-deps SYSTEM "../cocoon-dependencies-nowar.xml">
]>
<!-- -->
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-workflow</id>
  <name>AstroGrid Portal Workflow</name>

  <dependencies>

    <!-- Workflow -->
    <dependency>
      <groupId>astrogrid-workflow</groupId>
      <artifactId>astrogrid-workflow</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- MySpace -->
    <dependency>
      <groupId>astrogrid-mySpace</groupId>
      <artifactId>astrogrid-mySpace</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- Jes -->
    <dependency>
      <groupId>astrogrid-jes</groupId>
      <artifactId>astrogrid-jes</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- Common -->
    <dependency>
      <groupId>astrogrid-common</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>

    <!-- Community -->
    <dependency>
      <groupId>astrogrid-community</groupId>
      <artifactId>authentication-client</artifactId>
      <version>1.0</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    
    <!-- Web Services -->
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    
    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    &cocoon-deps;
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
  </build>
</project>
