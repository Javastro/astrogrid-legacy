<?xml version="1.0" encoding="UTF-8"?>

<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-workflow</id>
  <name>AstroGrid Portal Workflow</name>

  <dependencies>

    <!-- Workflow -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-workflow</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- jes -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-jes-delegate</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>     
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-workflow-objects</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>           
    </dependency>    

    <!-- Common -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>

    <!-- Community -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-client</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-common</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-community-resolver</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    
    <!-- Web Services -->
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    
    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    <xi:include href="../cocoon-dependencies-nowar.xml"/>
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
  </build>
</project>
