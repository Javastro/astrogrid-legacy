<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-community</id>
  <name>AstroGrid Portal Community</name>

  <dependencies>
    <!-- Common -->
    <dependency>
      <groupId>astrogrid-common</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!--+
    	| Community client jars
    	+-->
    <dependency>
      <groupId>astrogrid-community</groupId>
      <artifactId>astrogrid-community-auth-client</artifactId>
      <version>1.4.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <groupId>astrogrid-community</groupId>
      <artifactId>astrogrid-community-policy-client</artifactId>
      <version>1.4.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    <xi:include href="../cocoon-dependencies-nowar.xml"/>
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
  </build>
</project>
