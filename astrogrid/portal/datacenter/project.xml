<?xml version="1.0" encoding="UTF-8"?>
<!-- -->
<!DOCTYPE project [
  <!ENTITY cocoon-deps SYSTEM "../cocoon-dependencies-nowar.xml">
]>
<!-- -->
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../maven-project.xsd">
  <extend>../project.xml</extend>
  
  <id>astrogrid-portal-datacenter</id>
  <name>AstroGrid Portal DataCenter</name>

  <dependencies>
    <!-- Common -->
    <dependency>
      <groupId>astrogrid-common</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>SNAPSHOT</version>
    </dependency>

    <!-- Portal Common  -->
    <dependency>
      <groupId>astrogrid-portal</groupId>
      <artifactId>astrogrid-portal-common</artifactId>
      <version>SNAPSHOT</version>
    </dependency>

    <!-- Datacenter Client-->
    <dependency>
      <groupId>astrogrid-datacenter</groupId>
      <artifactId>astrogrid-datacenter-client</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- MySpace -->
    <dependency>
      <groupId>astrogrid-mySpace</groupId>
      <artifactId>astrogrid-mySpace</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- JAX dependencies -->
    <dependency>
      <groupId>jaxrpc-api</groupId>
      <artifactId>jaxrpc-api</artifactId>
      <version>1.0.3</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <groupId>jax-qname</groupId>
      <artifactId>jax-qname</artifactId>
      <version>1.0.3</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- Apache Commons -->
    <dependency>
      <groupId>commons-discovery</groupId>
      <artifactId>commons-discovery</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- DO NOT INCLUDE PARENT DEPENDENCIES IN WAR -->
    &cocoon-deps;
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
  </build>
</project>
