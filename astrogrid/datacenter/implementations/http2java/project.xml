<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>${basedir}/../../build/project-base.xml</extend>
  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>

  <!-- a unique name for this project -->
  <id>http2java</id>

  <!-- a short but descriptive name for the project -->
  <name>HTTP - Java Adapter</name>



  <description>
	Adapater library that wraps a legacy web application
	converts between java method calls and HTTP-POST / HTTP-GET to
	CGI scripts. Can be used as the back end for a SOAP server that wraps a legacy web application.
  </description>
  <!-- a short description of what the project does -->
  <shortDescription>
    Adapter that wraps legacy web applications as SOAP web services.
  </shortDescription>

  <siteDirectory>${maven.site.central.directory}/${astrogrid.iteration}/datacenter/implementations/http2soap</siteDirectory>

  <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->
  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations/http2soap
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations/http2soap
    </developerConnection>
  </repository>



  <!-- jar files the project is dependent on -->
  <dependencies>
    <dependency>
    	<id>bsf</id>
	<version>2.2</version>
    </dependency>
    <dependency>
    	<groupId>rhino</groupId>
    	<artifactId>js</artifactId>
    	<version>1.5R4.1</version>
    </dependency>


    <dependency>
    	<id>commons-httpclient</id>
	<version>2.0-beta1</version>
    </dependency>
    <!-- digester and things it relies upon -->
    <dependency>
    	<id>commons-digester</id>
	<version>1.5</version>
    </dependency>
    <dependency>
    	<id>commons-beanutils</id>
	<version>1.6</version>
    </dependency>
    <dependency>
    	<id>commons-collections</id>
	<version>2.1</version>
    </dependency>

  </dependencies>

</project>

