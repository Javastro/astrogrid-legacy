<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <extend>${basedir}/../../build/project-base.xml</extend>
  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <!-- a unique name for this project -->
  <id>cdsdelegate</id>
  <name>AstroGrid DataCenter CDS Vizier Delegate</name>
  <currentVersion>${astrogrid.iteration}</currentVersion>

  <description><![CDATA[
   Astrogrid Datacenter implementation that acts as a 'gateway' (ahem) for the CDS Vizier catalogue
   <p />
   Makes use of the Vizier Web service provided by CDS. Documented <a href="http://cdsweb.u-strasbg.fr/cdsws.gml">here</a>
   <p />
   This project also provides stand-alone java delegates for the other web services provided by CDS -
   <ul>
   <li>Vizier Catalogue Search</li>
   <li>UCD List</li>
   <li>UCD Resolver</li>
   <li>Sesame Name Resolver</li>
   <li> Aladin image server (under development) </li>
   </ul>
  ]]></description>

  <shortDescription>Astrogrid wrapper around CDS</shortDescription>
  <siteDirectory>${maven.site.central.directory}/${astrogrid.iteration}/datacenter/implementations/cdsdelegate</siteDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations/cdsdelegate
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations/cdsdelegate
    </developerConnection>
  </repository>

  <!-- jar files the project is dependent on -->
  <dependencies>
   <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-ant</artifactId>
      <version>1.1</version>
   </dependency>
   <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-datacenter-server</artifactId>
      <version>${pom.currentVersion}</version>
   </dependency>
   <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-datacenter-client</artifactId>
      <version>${pom.currentVersion}</version>
   </dependency>
       <dependency>
      <groupId>org.astrogrid</groupId>
        <artifactId>astrogrid-store-client</artifactId>
        <version>${pom.currentVersion}</version>
       <properties>
      <war.bundle>true</war.bundle>
    </properties>
    </dependency>
    

  </dependencies>

</project>

