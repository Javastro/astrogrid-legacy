<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
<extend>${basedir}/../build/project-base.xml</extend>
  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <!-- a unique name for this project -->
  <id>astrogrid-datacenter-implementations</id>
  <name>AstroGrid DataCenter Server Implementations</name>

  <currentVersion>${astrogrid.iteration}</currentVersion>

	<description><![CDATA[
	Astrogrid datacenter server back-ends
	<p />
	Implementations and examples for
	<ul>
	<li>interface to various database flavours</li>
	<li>delegate requests to another web service</li>
	<li>supporting libraries for writing datacenters</li>
	<li>code and configuration specific to single datacenters</li>
	</ul>
	]]>
	</description>

  <shortDescription>Astrogrid Datacenter Server Implementations</shortDescription>

  <url>http://www.astrogrid.org/maven/datacenter/implementations</url>
  <siteDirectory>${maven.site.central.directory}/${astrogrid.iteration}/datacenter/implementations</siteDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/datacenter/implementations
    </developerConnection>
  </repository>

  <reports>
    <report>
      maven-changelog-plugin
    </report>
    <report>
      maven-changes-plugin
    </report>
    <report>
      maven-developer-activity-plugin
    </report>
    <report>
      maven-file-activity-plugin
    </report>
    <report>
      maven-license-plugin
    </report>
  </reports>

</project>

