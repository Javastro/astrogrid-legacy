<?xml version="1.0" encoding="UTF-8"?>
<project>

  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>

  <!-- a unique name for this project -->
  <id>http2soap</id>

  <!-- a short but descriptive name for the project -->
  <name>HTTP - SOAP Adapter</name>
    <groupId>astrogrid-datacenter</groupId>

  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-dev -->
  <currentVersion>HEAD</currentVersion>

  <!-- details about the organization that 'owns' the project -->
  <organization>
    <name>Astrogrid</name>
    <url>http://www.astrogrid.org</url>
    <logo>http://www.astrogrid.org/images/AGlogo</logo>
  </organization>

  <!-- the year the project started -->
  <inceptionYear>2003</inceptionYear>
  <package>org.astrogrid.datacenter.http2soap</package>
  <logo>http://www.astrogrid.org/images/AGlogo</logo>
  <description>
	Adapater SOAP service that wraps a legacy web application
	converts between SOAP messages and HTTP-POST / HTTP-GET to
	CGI scripts.
  </description>
  <!-- a short description of what the project does -->
  <shortDescription>
    Adapter that wraps legacy web applications as SOAP web services.
  </shortDescription>

  <!-- the project home page -->
  <siteAddress>www.astrogrid.org</siteAddress>
  <siteDirectory>/var/www/www/maven/build/datacenter/http2soap</siteDirectory>

  <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->
  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/datacenter/http2soap
    </connection>
    <developerConnection>
      scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid/datacenter/http2soap
    </developerConnection>
  </repository>

  <!-- who the developers are for the project -->
  <developers>

    <developer>
    	<name>Noel Winstanley</name>
    	<id>nw</id>
    	<email>nw@jb.man.ac.uk</email>
    </developer>
  </developers>

  <!-- jar files the project is dependent on -->
  <dependencies>
    <dependency>
    	<id>bsf</id>
	<version>2.2</version>
    </dependency>
    <dependency>
    	<groupId>rhino</groupId>
    	<artifactId>js</artifactId>
    	<version>1.5R4.1</version>
    </dependency>
    <dependency>
    	<id>junit</id>
	<version>3.8</version>
    </dependency>
    <dependency>
    	<id>axis</id>
	<version>1.1</version>
    </dependency>
    <dependency>
    	<id>commons-httpclient</id>
	<version>2.0-beta1</version>
    </dependency>
    <!-- digester and things it relies upon -->
    <dependency>
    	<id>commons-digester</id>
	<version>1.5</version>
    </dependency>
    <dependency>
    	<id>commons-beanutils</id>
	<version>1.6</version>
    </dependency>
    <dependency>
    	<id>commons-collections</id>
	<version>2.1</version>
    </dependency>
    <dependency>
    	<id>commons-logging</id>
	<version>1.0.3</version>
    </dependency>
    <dependency>
    	<id>commons-discovery</id>
	<version>SNAPSHOT</version>
    </dependency>
  </dependencies>
  
  <!-- build information for the project -->
  <build>
    <nagEmailAddress>turbine-maven-dev@jakarta.apache.org</nagEmailAddress>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/test/java</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
	<resource>
		<directory>${basedir}/test/java</directory>
		<includes>
			<include>**/*.xml</include>
		</includes>
	</resource>
      </resources>
    </unitTest>

    <resources>
      <resource>
        <directory>${basedir}/src/conf</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
      <resource>
      	<directory>${basedir}/src/java</directory>
	<includes>
		<include>**/*.xsd</include>
		<include>**/*.xml</include>
		<include>**/*.xs</include> <!-- check this -->
	</includes>
	</resource>
    </resources>
  </build>

  <reports>
    <report>
      maven-changelog-plugin
    </report>
    <report>
      maven-changes-plugin
    </report>
    <report>
      maven-checkstyle-plugin
    </report>
    <report>
      maven-clover-plugin
    </report>
    <report>
      maven-developer-activity-plugin
    </report>
    <report>
      maven-file-activity-plugin
    </report>
    <report>
      maven-javadoc-plugin
    </report>
    <report>
      maven-jdepend-plugin
    </report>
    <report>
      maven-junit-report-plugin
    </report>
    <report>
      maven-jxr-plugin
    </report>
    <report>
      maven-license-plugin
    </report>
    <report>
      maven-pmd-plugin
    </report>
    <report>
      maven-tasklist-plugin
    </report>
    <report>
      maven-simian-plugin
    </report>
  </reports>
</project>

