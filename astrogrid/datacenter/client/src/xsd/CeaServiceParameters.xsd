   <!-- Datacenter should define all Astrogrid datacenters, including warehouses -->
   <Application name="Datacenter" instanceClass="org.astrogrid.datacenter.service.CeaDataService">
      <Parameters>
         <CmdLineParameterDefn name="Query" type="agpd:ADQL" commandPosition="1">
            <agpd:UI_Name>Query</agpd:UI_Name>
            <agpd:UI_Description>Astronomy Data Query Language that defines the search criteria</agpd:UI_Description>
         </CmdLineParameterDefn>
         <CmdLineParameterDefn name="Format" type="agpd:String" commandPosition="2">
            <agpd:UI_Name>Results Format</agpd:UI_Name>
            <agpd:UI_Description>How the results are to be returned.  VOTABLE or CSV for now</agpd:UI_Description>
         </CmdLineParameterDefn>
         <CmdLineParameterDefn name="Target" type="agpd:String" commandSwitch="3">
            <agpd:UI_Name>Results Target</agpd:UI_Name>
            <agpd:UI_Description>Where the results will be sent to; use IVORN (eg IVO://community/individual#path) or AGSL (eg astrogrid:store:myspace:http://etc#path) or mailto:{email}</agpd:UI_Description>
         </CmdLineParameterDefn>
         <CmdLineParameterDefn name="QueryID" type="agpd:String">
            <agpd:UI_Name>Query ID</agpd:UI_Name>
            <agpd:UI_Description>String that can be used to access the query started by this call, for status updates, abort, etc</agpd:UI_Description>
         </CmdLineParameterDefn>
      </Parameters>
      <Interfaces>
         <Interface name="Simple">
            <input>
               <pref ref="Query"/>
               <pref ref="Format"/>
               <pref ref="Target"/>
            </input>
            <output>
               <pref ref="QueryID"/>
            </output>
         </Interface>
      </Interfaces>
   </Application>


