      <id>breezetk</id>
      <version>UNKNOWN</version>
      <jar>breezetk.jar</jar>
          <properties>
      <war.bundle>true</war.bundle>
    </properties>
    </dependency>

    <dependency>
      <id>VOTableUtil</id>
      <version>UNKNOWN</version>
      <jar>VOTableUtil.jar</jar>
          <properties>
      <war.bundle>true</war.bundle>
    </properties>
    </dependency>

    <!-- JavaMail -->
    <dependency>
      <id>JavaMail</id>
      <version>UNKNOWN</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <jar>JavaMail.jar</jar>
    </dependency>

   <!-- sun's activation jar for JavaMail.  -->
   <dependency>
      <id>activation</id>
      <version>1.0.2</version>
      <properties>
         <war.bundle>true</war.bundle>
      </properties>
   </dependency>

      <!-- hsqldb - for testing -->
    <dependency>
      <id>hsqldb</id>
      <version>1.7.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
  </dependencies>

  <!-- build information for the project -->

</project>

