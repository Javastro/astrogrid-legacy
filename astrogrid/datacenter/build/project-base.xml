  <build>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/test/java</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>

      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
	  <!--everything else but the sources -->
	  <excludes>
	  	<exclude>**/*.java</exclude>
	  </excludes>
        </resource>
      </resources>
    </unitTest>

    <resources>
    	<resource><!-- config files -->
		<directory>${basedir}/src/java</directory>
		<includes>
			<include>**/*.xml</include>
			<include>**/*.xsl</include>
			<include>**/*.properties</include>
		</includes>
	</resource>
	<resource> <!-- schemas  - may be needed for validation -->
		<directory>${basedir}/src</directory>
		<includes>
			<include>xsd/**</include>
			<include>xslt/**</include>
			<include>wsdl/**</include>
			<include>wsdd/**</include>
		</includes>
	</resource>
    </resources>

  </build>

