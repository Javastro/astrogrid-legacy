<?xml version = "1.0" encoding = "UTF8"?>
<job name = "jl004">
   <userid>jlusted</userid>
   <community>leicester</community>
   <jobstep name="min_max_avg" >
      <query>
        <!--================================================ 
        SELECT COLUMN_ONE
          FROM USNOB 
        WHERE ( COLUMN_TWO > AVG(COLUMN_THREE)
        AND MAX(COLUMN_FOUR) < MIN(COLUMN_FIVE) )
        =================================================-->      
         <from>         
            <catalog name="USNOB">         
               <service name="AGHomeService" url="http://hydra.star.le.ac.uk:8080/axis/services/DatasetAgent" />
               <table>USNOB</table>
            </catalog>
         </from>
         <return>
            <field name="COLUMN_ONE" type="COLUMN"/>
         </return>
         <criteria>
            <operation name="AND">
               <operation name="GREATER_THAN">
                  <field name="COLUMN_TWO" type="COLUMN"/>          
                  <operation name="AVG">
                     <field name="COLUMN_THREE" type="COLUMN"/>
                  </operation>
               </operation>
               <operation name="LESS_THAN">
                  <operation name="MAX">
                     <field name="COLUMN_FOUR" type="COLUMN"/> 
                  </operation>         
                  <operation name="MIN">
                     <field name="COLUMN_FIVE" type="COLUMN"/>
                  </operation>
               </operation>
            </operation>   
         </criteria>
      </query>
   </jobstep>
</job>
