<?xml version = "1.0" ?>
<job name = "jl010">
   <userid>jlusted</userid>
   <community>leicester</community>
   <jobstep name="arithmetic_PLUS_GT_MINUS" >
      <query>  
<!--============================================== 
    SELECT * 
        FROM USNOB
    WHERE ( ( COLUMN_ONE * COLUMN_TWO ) > ( COLUMN_THREE * COLUMN_FOUR * 1000 ) )
===============================================--> 
         <from>         
            <catalog name="USNOB">         
               <service name="AGHomeService" url="http://hydra.star.le.ac.uk:8080/axis/services/DatasetAgent" />
               <table>USNOB</table>
            </catalog>
         </from>
         <return>
            <field name="*" type="COLUMN"/>
         </return>
         <criteria>
             <operation name="GREATER_THAN">
                 <operation name="COLUMN_ARITHMETIC">
                     <operation name="MULTIPLY">
                         <field name="COLUMN_ONE" type="COLUMN"/>
                         <field name="COLUMN_TWO" type="COLUMN"/>
                     </operation>                       
                 </operation>
                 <operation name="COLUMN_ARITHMETIC">
                     <operation name="MULTIPLY">
                         <field name="COLUMN_THREE" type="COLUMN"/>
                         <field name="COLUMN_FOUR" type="COLUMN"/>
                         <field>1000</field>
                     </operation>                                                                
                 </operation>
             </operation>
         </criteria>
      </query>
   </jobstep>
</job>
