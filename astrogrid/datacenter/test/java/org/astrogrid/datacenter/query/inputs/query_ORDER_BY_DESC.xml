<?xml version = "1.0" encoding = "UTF8"?>
<job name = "jl004">
   <userid>jlusted</userid>
   <community>leicester</community>
   <jobstep name="order by desc" >
      <query>
<!--============================================== 
    SELECT COLUMN_ONE, COLUMN_TWO, COLUMN_THREE 
        FROM USNOB
    WHERE (COLUMN_FOUR > COLUMN_FIVE )
      ORDER BY COLUMN_ONE DESC, COLUMN_TWO DESC,COLUMN_THREE ASC
===============================================-->             
         <from>         
            <catalog name="USNOB">         
               <service name="AGHomeService" url="http://hydra.star.le.ac.uk:8080/axis/services/DatasetAgent" />
               <table>USNOB</table>
            </catalog>
         </from>
         <return>
            <field name="COLUMN_ONE" type="COLUMN"/>
            <field name="COLUMN_TWO" type="COLUMN"/>
            <field name="COLUMN_THREE" type="COLUMN"/>            
         </return>
         <criteria>
            <operation name="GREATER_THAN">               
               <field name="COLUMN_FOUR" type="COLUMN"/>
               <field name="COLUMN_FIVE" type="COLUMN"/>
            </operation>
         </criteria>
         <order>
            <operation name="ORDER_BY_AND">
               <operation name="ORDER_BY_DESC">
                  <field name="COLUMN_ONE" type="COLUMN"/>
               </operation>
               <operation name="ORDER_BY_DESC">
                  <field name="COLUMN_TWO" type="COLUMN"/>
               </operation>
               <operation name="ORDER_BY_ASC">
                  <field name="COLUMN_THREE" type="COLUMN"/>
               </operation>               
            </operation>
         </order>
      </query>
   </jobstep>
</job>
