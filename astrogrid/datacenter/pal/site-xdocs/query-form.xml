<document>
<properties>
   <author email="nw@jb.man.ac.uk">Noel Winstanley</author>
   <author email="mch@roe.ac.uk">Martin Hill</author>
   <title>Datacenter query form</title>
</properties>

<body>
  <section name="Submit an ADQL/sql Query">
    <p>
      <form action="submitAdqlSql.jsp" method="POST">
       <p>
         ADQL/sql <textarea name="AdqlSql" rows='1' cols='100%'/><br />
       </p>
       <p>
          Results Format
          <select name='Format'>
             <option value="VOTABLE">VOTable</option>
             <option value="CSV">CSV</option>
          </select>
          Send them to
          <input type="text" name="Target"/>
          <input type="submit" value="Submit ADQL" />
       </p>

      </form>
    </p>
  </section>

  <section name="Submit an ADQL/xml Query">
    <p>
      <b>Enter your ADQL/xml query here:</b>
      (<a href="http://skyservice.pha.jhu.edu/devel/AdqlTranslator/Convertor.aspx">Translate from SQL</a>)
      (<a href="adql">Sample queries</a> <i>Note that some browsers will modify viewed XML, so check for DEFANGED, case changes, etc</i>)
      <br />
      <form action="submitAdqlXml.jsp" method="POST">
        <textarea name="AdqlXml" rows="20" cols="100%"></textarea>
        <p/>
        <p>
          Results Format
          <select name='Format'>
             <option value="VOTABLE">VOTable</option>
             <option value="CSV">CSV</option>
          </select>
          Send them to
          <input type="text" name="Target"/>
          <input type="submit" value="Submit ADQL" />
       </p>
      </form>
    </p>
  </section>

  <section name="Submit a Region Query">
    <p>
      <form action="submitCone.jsp" method="POST">
       <p>
         Right Ascension in decimal degrees, J2000 <input type="text" name="RA"/><br />
         Decliniation in decimal degress, J2000 <input type="text" name="DEC" /><br />
         Search radius in decimal degrees <input type="text" name="SR" /><br />
       </p>
       <p>
          Results Format
          <select name='Format'>
             <option value="VOTABLE">VOTable</option>
             <option value="CSV">CSV</option>
          </select>
          Send them to
          <input type="text" name="Target"/>
          <input type="submit" value="Search Cone" />
       </p>
     </form>
   </p>
  </section>

