<!-- Include this file in forms that require the results to be specified -->
<!-- The parameters (input field names) should match the ServletHelper.makeReturnSpec -->
<div id='resultsSpec'>
        <p>
          Results Format
          <select name='Format'>
             <option value="VOTABLE">VOTable</option>
             <option value="CSV">CSV</option>
             <option value="HTML">Html</option>
          </select>
          Compression
          <select name='Compression'>
             <option value="NONE">None</option>
          </select>
          <table>
          <tr><td>Send them to</td><td><input type='radio' name='TargetResponse' value='true' checked='true'/>Browser</tr>
          <tr><td></td>            <td><input type='radio' name='TargetResponse' value='false'/>URI</td><td><input type="text" name="TargetURI"/>           <a href="http://wiki.astrogrid.org/bin/view/Support/HelpTargetIndicators">(Help)</a></td></tr>
          </table>
        </p>
</div>

