<!-- XML equiuvalent
SELECT t.b, b.* FROM Tab t, Bob b WHERE AVG(b.dd) < 4.56 ORDER BY b.dd
-->
<Select xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xmlns="http://tempuri.org/adql">
  <SelectionList>
    <ColumnExpr>
      <SingleColumnReference>
        <TableName>s</TableName>
        <Name>RA</Name>
      </SingleColumnReference>
    </ColumnExpr>
    <ColumnExpr>
      <AllColumnReference>
        <TableName>g</TableName>
      </AllColumnReference>
    </ColumnExpr>
  </SelectionList>
  <TableClause>
    <FromClause>
      <TableReference>
        <Table>
          <Name>SampleStars</Name>
          <AliasName>s</AliasName>
        </Table>
        <Table>
          <Name>SampleGalaxies</Name>
          <AliasName>g</AliasName>
        </Table>
