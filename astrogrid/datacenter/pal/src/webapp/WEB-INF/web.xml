<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

  <display-name>Astrogrid Datacenter server</display-name>
  <description>
    SOAP service that publishes a data set to AstroGrid.
  </description>

   <!-- Class to listen out to container events (ie startup, shutdown) -->
   <!-- This doesn't work on tomcat 4.0...
   <listener>
        <listener-class>org.astrogrid.datacenter.servlet.ContainerListener</listener-class>
    </listener>
    -->

    
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <display-name>Apache-Axis Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AxisServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>JUnitEETestServlet</servlet-name>
    <description>JUnitEE test runner</description>
    <servlet-class>org.junitee.servlet.JUnitEEThreadedServlet</servlet-class>
  </servlet>
  
   <!-- Query-managing servlets -->
  <servlet>
    <servlet-name>SubmitCone</servlet-name>
    <description>Servlet for submitting simple (NVO compatible) cone searches via POST or GET</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitCone</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitAdql</servlet-name>
    <description>Servlet for submitting ADQL/xml queries</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitAdqlXml</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitSql</servlet-name>
    <description>Servlet for submitting raw SQL queries</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitRawSql</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitAdqlSql</servlet-name>
    <description>Servlet for submitting ADQL/SQL queries</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitAdqlSql</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitQuery</servlet-name>
    <description>Servlet for submitting (asynchronous) queries via POST or GET</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitQuery</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AskQuery</servlet-name>
    <description>Servlet for asking (synchronous) queries via POST or GET</description>
    <servlet-class>org.astrogrid.datacenter.servlet.AskQuery</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AttemptAbort</servlet-name>
    <description>Servlet for attempting to abort a query</description>
    <servlet-class>org.astrogrid.datacenter.servlet.AttemptAbort</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SimpleImageAccess</servlet-name>
    <description>serves using Simple Image Access Protocol</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SimpleImageAccess</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <description>serves using Simple Spectra Access Protocol</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SimpleSpectraAccess</servlet-class>
  </servlet>

  <!-- Admin servlets -->
  <servlet>
    <servlet-name>GetLog</servlet-name>
    <description>Returns the log</description>
    <servlet-class>org.astrogrid.webapp.GetLog</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetMetadata</servlet-name>
    <description>serves the datacenter's metadata</description>
    <servlet-class>org.astrogrid.datacenter.servlet.GetMetadata</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Register</servlet-name>
    <description>(re)Registers the service (sends the metadata to the configured Registries)</description>
    <servlet-class>org.astrogrid.datacenter.servlet.Register</servlet-class>
  </servlet>

  <!-- CEA -->
  <servlet>
      <servlet-name>cec-http</servlet-name>
      <description>
        a small servlet that helps cea by
    * querying servlet context - find out where it is, set keys in config from this
    (keys used to generate VODescription for this CEA service)
    * provides http-get access to some of the cec methods (call by HTTP-GET with no params for usage info)
      </description>
      <servlet-class>org.astrogrid.applications.component.InitServlet</servlet-class>

  </servlet>

  <!-- Store Browser -->
  <servlet>
    <servlet-name>StoreBrowser</servlet-name>
    <description>For Browsing stores (including myspace) </description>
    <servlet-class>org.astrogrid.store.browser.Servlet</servlet-class>
  </servlet>

  <!-- Query Managing tasks -->
  <servlet-mapping>
    <servlet-name>SubmitQuery</servlet-name>
    <url-pattern>/SubmitQuery</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AskQuery</servlet-name>
    <url-pattern>/AskQuery</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SubmitCone</servlet-name>
    <url-pattern>/SubmitCone</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SubmitAdql</servlet-name>
    <url-pattern>/SubmitAdql</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SubmitAdqlSql</servlet-name>
    <url-pattern>/SubmitAdqlSql</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AttemptAbort</servlet-name>
    <url-pattern>/AttemptAbort</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AttemptAbort</servlet-name>
    <url-pattern>/Abort</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleImageAccess</servlet-name>
    <url-pattern>/SIA</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleImageAccess</servlet-name>
    <url-pattern>/SimpleImageAccess</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <url-pattern>/SimpleSpectraAccess</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <url-pattern>/SSA</url-pattern>
  </servlet-mapping>

  <!-- Administration type stuff -->
  <servlet-mapping>
    <servlet-name>GetLog</servlet-name>
    <url-pattern>/admin/GetLog</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/admin/Register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetMetadata</servlet-name>
    <url-pattern>/GetMetadata</url-pattern>
  </servlet-mapping>

  <!-- Axis -->
  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/servlet/AxisServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

 <servlet-mapping>
    <servlet-name>JUnitEETestServlet</servlet-name>
    <url-pattern>/TestServlet/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
        <servlet-name>cec-http</servlet-name>
        <url-pattern>/cec-http</url-pattern>
  </servlet-mapping>

  <!-- Store Browser -->
  <servlet-mapping>
        <servlet-name>StoreBrowser</servlet-name>
        <url-pattern>/StoreBrowser</url-pattern>
  </servlet-mapping>

    <!-- currently the W3C havent settled on a media type for WSDL;
    http://www.w3.org/TR/2003/WD-wsdl12-20030303/#ietf-draft
    for now we go with the basic 'it's XML' response -->
  <mime-mapping>
    <extension>wsdl</extension>
     <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <welcome-file-list id="WelcomeFileList">
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Security stuff - ensure admin & setup pages are not readily available -->
  <security-constraint>
      <web-resource-collection>
          <web-resource-name></web-resource-name>
          <url-pattern>/admin/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
          <role-name>paladmin</role-name>
      </auth-constraint>
  </security-constraint>

  <security-constraint>
      <web-resource-collection>
          <web-resource-name></web-resource-name>
          <url-pattern>/setup/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
          <role-name>paladmin</role-name>
      </auth-constraint>
  </security-constraint>
   
  <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>AstroGrid</realm-name>
  </login-config>

  <security-role>
     <role-name>paladmin</role-name>
  </security-role>

  <!-- causes Tomcat to throw an exception... fix later
  <resource-ref>
   <description>Datasource to use to access the database</description>
   <res-ref-name>jdbc/pal-datasource</res-ref-name>
   <res-type>javax.sql.DataSource</res-type>
   <res-auth>Container</res-auth>
  </resource-ref>
  -->

