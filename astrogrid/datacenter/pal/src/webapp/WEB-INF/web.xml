<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

  <display-name>Astrogrid Datacenter server</display-name>
  <description>
    SOAP service that publishes a data set to AstroGrid.
  </description>
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <display-name>Apache-Axis Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AxisServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>JUnitEETestServlet</servlet-name>
    <description>JUnitEE test runner</description>
    <servlet-class>org.junitee.servlet.JUnitEEServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitCone</servlet-name>
    <description>Servlet for submitting simple (NVO compatible) cone searches via POST or GET</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitCone</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitAdql</servlet-name>
    <description>Servlet for submitting ADQL/xml queries</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitAdqlXml</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SubmitSql</servlet-name>
    <description>Servlet for submitting raw SQL queries</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SubmitRawSql</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AttemptAbort</servlet-name>
    <description>Servlet for attempting to abort a query</description>
    <servlet-class>org.astrogrid.datacenter.servlet.AttemptAbort</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SimpleImageAccess</servlet-name>
    <description>serves using Simple Image Access Protocol</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SimpleImageAccess</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <description>serves using Simple Spectra Access Protocol</description>
    <servlet-class>org.astrogrid.datacenter.servlet.SimpleSpectraAccess</servlet-class>
  </servlet>

  <servlet>
      <servlet-name>cec-http</servlet-name>
      <description>
        a small servlet that helps cea by
    * querying servlet context - find out where it is, set keys in config from this
    (keys used to generate VODescription for this CEA service)
    * if 'boot.cea' set to 'true' will invoke .startup() on the pico container on context deploy
        (otherwise cea will boot at first request)
        - sometimes good - e.g. when services want to auto-register on startup.
        - however, was causing problems with auto-integration (race conditions between webapps), so disabled by default
    * provides http-get access to some of the cec methods (call by HTTP-GET with no params for usage info)
      </description>
      <servlet-class>org.astrogrid.applications.component.InitServlet</servlet-class>
      <init-param>
        <param-name>boot.cea</param-name>
        <param-value>false</param-value>
      </init-param>
      <load-on-startup>200</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/servlet/AxisServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SubmitCone</servlet-name>
    <url-pattern>/SubmitCone</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SubmitAdql</servlet-name>
    <url-pattern>/SubmitAdql</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AttemptAbort</servlet-name>
    <url-pattern>/AttemptAbort</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AttemptAbort</servlet-name>
    <url-pattern>/Abort</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleImageAccess</servlet-name>
    <url-pattern>/SIA</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleImageAccess</servlet-name>
    <url-pattern>/SimpleImageAccess</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <url-pattern>/SimpleSpectraAccess</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SimpleSpectraAccess</servlet-name>
    <url-pattern>/SSA</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

 <servlet-mapping>
    <servlet-name>JUnitEETestServlet</servlet-name>
    <url-pattern>/TestServlet/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
        <servlet-name>cec-http</servlet-name>
        <url-pattern>/cec-http</url-pattern>
  </servlet-mapping>

    <!-- currently the W3C havent settled on a media type for WSDL;
    http://www.w3.org/TR/2003/WD-wsdl12-20030303/#ietf-draft
    for now we go with the basic 'it's XML' response -->
  <mime-mapping>
    <extension>wsdl</extension>
     <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <welcome-file-list id="WelcomeFileList">
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

