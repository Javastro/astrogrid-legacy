<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: project.xml,v 1.30 2005/11/04 17:31:05 clq2 Exp $ -->
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extend>../maven-base/project.xml</extend>
  <artifactId>astrogrid-common</artifactId>
  <currentVersion>${astrogrid.common.version}</currentVersion>
  <name>Common classes</name>
  <description>Classes used across the components.</description>
  <shortDescription>AstroGrid Common Library</shortDescription>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.xmltemplate</include>
            <include>**/*.properties</include>
            <include>**/*.sql</include>
            <include>**/*.ddl</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
          <include>**/*.dtd</include>
        </includes>
      </resource>
    </resources>
  </build>
  <dependencies>
    <dependency>
      <groupId>axis</groupId>
    	<type>jar</type>
    	<artifactId>axis</artifactId>
      <version>1.3</version>
    </dependency>
    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
    </dependency>
    <dependency>
      <id>jconfig</id>
      <version>2.1</version>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8</version>
    </dependency>
    <dependency>
      <id>xmlunit</id>
      <version>1.0</version>
    </dependency>
    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
    </dependency>
    <dependency>
      <id>commons-discovery</id>
      <version>20030211.213356</version>
    </dependency>
    <dependency>
      <id>commons-jxpath</id>
      <version>1.1</version>
    </dependency>
    <dependency>
      <id>xerces</id>
      <version>2.4.0</version>
    </dependency>
    <dependency>
      <id>xml-apis</id>
      <version>1.0.b2</version>
    </dependency>
    <dependency>
      <artifactId>hsqldb</artifactId>
      <groupId>hsqldb</groupId>
      <version>1.7.1</version>
    </dependency>
    <!-- pico container -->
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.0</version>
    </dependency>
    <!-- transactions lib - for unique number source -->
    <dependency>
    	<groupId>commons-transaction</groupId>
	<artifactId>commons-transaction</artifactId>
	<version>1.0.1</version>	
    </dependency>    
    
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
    </dependency>
  </dependencies>  
</project>