<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extend>../maven-base/project.xml</extend>
  <id>astrogrid-common</id>
  <name>Common classes</name>
  <description>Classes used across the components.</description>
  <shortDescription>AstroGrid Common Library</shortDescription>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.xmltemplate</include>
            <include>**/*.properties</include>
            <include>**/*.sql</include>
            <include>**/*.ddl</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  <dependencies>
    <dependency>
      <id>axis</id>
      <version>1.1</version>
    </dependency>
    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
    </dependency>
    <dependency>
      <id>jconfig</id>
      <version>2.1</version>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8</version>
    </dependency>
    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
    </dependency>
    <dependency>
      <id>commons-discovery</id>
      <version>20030211.213356</version>
    </dependency>
    <dependency>
      <id>commons-jxpath</id>
      <version>1.1</version>
    </dependency>
    <dependency>
      <artifactId>hsqldb</artifactId>
      <groupId>hsqldb</groupId>
      <version>1.7.1</version>
    </dependency>
    <!-- pico container -->

    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
  <currentVersion>jdt_test_maven_scm_module</currentVersion>
  <versions>
    <version>
      <id>jdt_test_maven_scm_module</id>
      <name>jdt_test_maven_scm_module</name>
      <tag>jdt_test_maven_scm_module</tag>
    </version>
  </versions>
</project>
