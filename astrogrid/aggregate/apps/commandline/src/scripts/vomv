#!/usr/bin/env groovy

/** move a resource in myspace

*/

import org.apache.commons.cli.HelpFormatter;
class Vomv extends org.astrogrid.ui.script.commandline.CommandlineApplication {

static void main(String[] args){
        new Vomv().run(args)
}
void doIt() {
if (line.hasOption "h") {
  displayHelp()
  System.exit(0)
}
client = astrogrid.createVoSpaceClient(user)
src =  mkFull(line.getArgs()[0])
dest =  mkFull(line.getArgs()[1])
client.move(src,dest)

}
void displayHelp() {
        (new HelpFormatter()).printHelp(
<<<DOC
vomv [options] <src> <dest>
  move a myspace resource to a new location in myspace.
 <src> and <dest> may either be specified in full ivo://..  or abridged #... forms.
 NB: at present, both <src> and <dest> must be files, not directories.
DOC
,o)
}

}