#!/usr/bin/env groovy

/** make a directory in myspace

*/

import org.apache.commons.cli.HelpFormatter;
class Vomkdir extends org.astrogrid.ui.script.commandline.CommandlineApplication  {

static void main(String[] args) {
        new Vomkdir().run(args)
}
void doIt() {
if (line.hasOption "h") {
  displayHelp()
  System.exit(0)
}
client = astrogrid.createVoSpaceClient(user)
dir =  mkFull(line.getArgs()[0])
client.newFolder(dir)

}

void displayHelp() {
        (new HelpFormatter()).printHelp(
<<<DOC
vomkdir [options] <new-dir-path>
  make a directory in myspace.
  new-dir-path can either be specified in full ivo://.. or abridged #.. form

DOC
,o)
}

}