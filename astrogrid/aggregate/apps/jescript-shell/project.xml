        <extend>${basedir}/../../../maven-base/project.xml</extend>
        <currentVersion>${astrogrid.aggregate.version}</currentVersion>
        <id>jescript-shell</id>
        <name>JEScript commandline shell</name>
        <description>Package of groovy shell with Astrogrid System Objects</description>
        <shortDescription>Groovy JEScript Shell</shortDescription>

        <dependencies>
                <!-- this dep must always be first in the list -->
                <!-- minimal packaging of groovy -->
        <!-- copied from project.xml in groovy 1.beta 7 -->
    <dependency>
        <groupId>groovy</groupId>
        <artifactId>groovy</artifactId>
        <version>1.0-beta-7</version>
        <url>http://dist.codehaus.org/groovy/jars/</url>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>1.4.1</version> <!-- really wants 1.4.3, but only 1.4.1 in repo at moment - and is what is used in JES. -->
      <url>http://asm.objectweb.org/</url>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
    </dependency>

    <dependency>
       <groupId>org.astrogrid</groupId>
       <artifactId>astrogrid-scripting</artifactId>
       <version>${astrogrid.scripting.version}</version>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
    </dependency>
    <!-- scripting uses externalValue classes - currently in cea server. will factor out later into a smaller package -->
        <dependency>
                <groupId>org.astrogrid</groupId>
                <artifactId>astrogrid-cea-server</artifactId>
                <version>${astrogrid.applications.version}</version>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
        </dependency>
        <!-- helper libraries -->
        <dependency>
                <groupId>starlink</groupId>
                <artifactId>stil</artifactId>
                <version>2.0-1</version>
                <url>http://www.star.bristol.ac.uk/~mbt/stil/</url>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
        </dependency>
    <dependency>
      <artifactId>junit</artifactId>
      <groupId>junit</groupId>
      <version>3.8</version>
      <properties>
                    <jnlp.jar>true</jnlp.jar>
      </properties>
    </dependency>       
        
        
    <!-- needed for compilation only -->
    <dependency>
       <groupId>org.astrogrid</groupId>
       <artifactId>astrogrid-workflow-objects</artifactId>
       <version>${astrogrid.workflowobjects.version}</version>
    </dependency>
    <dependency>
        <groupId>org.astrogrid</groupId>
        <artifactId>astrogrid-common</artifactId>
        <version>${astrogrid.common.version}</version>
    </dependency>



