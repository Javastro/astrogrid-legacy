<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="maven-project.xsd">
        <extend>${basedir}/../../../maven-base/project.xml</extend>
        <currentVersion>${astrogrid.aggregate.version}</currentVersion>
        <id>jescript-shell</id>
        <name>JEScript Console</name>
        <description>Package of Groovy Console with Astrogrid System Objects</description>
        <shortDescription>Groovy JEScript Console</shortDescription>

        <dependencies>
                <!-- this dep must always be first in the list -->
                <!-- minimal packaging of groovy -->
        <!-- copied from project.xml in groovy 1.beta 7 -->
    <dependency>
        <groupId>groovy</groupId>
        <artifactId>groovy</artifactId>
        <version>1.0-beta-7</version>
        <url>http://dist.codehaus.org/groovy/jars/</url>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>1.4.1</version> <!-- really wants 1.4.3, but only 1.4.1 in repo at moment - and is what is used in JES. -->
      <url>http://asm.objectweb.org/</url>
                <properties>
                    <jnlp.jar>true</jnlp.jar>
                </properties>
    </dependency>
    

    <!-- needed for compilation only -->
    <dependency>
    	<groupId>org.astrogrid</groupId>
    	<artifactId>astrogrid-scripting</artifactId>
    	<version>${astrogrid.scripting.version}</version>
    </dependency>


        <!-- stuff required in maven build -->
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-jsl</artifactId>
            <version>20030211.143151</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-xml</artifactId>
            <version>20030211.142705</version>
            <url>http://jakarta.apache.org/commons/jelly/libs/xml/</url>
            <properties/>
        </dependency>
  </dependencies>

    <build>

        <sourceDirectory/>

        <unitTestSourceDirectory/>

        <unitTest/>
    </build>

</project>
