                </dependency>
               <dependency>
                    <id>regexp</id>
                <version>1.3</version>
                <url>http://jakarta.apache.org/commons/</url>
                        <properties>
                                <jnlp.jar>true</jnlp.jar>
                        </properties>
                </dependency>
    </dependencies>
</project>
