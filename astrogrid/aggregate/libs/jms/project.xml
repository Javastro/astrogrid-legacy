<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>${basedir}/../../../maven-base/project.xml</extend>

  <currentVersion>${astrogrid.aggregate.version}</currentVersion>

  <id>jms</id>

  <name>ActiveMQ JMS Libraries</name>

  <description>JMS Client bundled as a JNLP Extension</description>

  <shortDescription>JMS Messaging Libraries</shortDescription>

  <dependencies>
	  <!-- messaging system -->
	  
	  <dependency>
		  <artifactId>activemq-core</artifactId>
		  <groupId>activemq</groupId>
		  <version>3.2</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>

	  <dependency>
		  <artifactId>geronimo-spec-jms</artifactId>
		  <groupId>geronimo-spec</groupId>
		  <version>1.1-rc4</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>	
	  <dependency>
		  <artifactId>geronimo-spec-jta</artifactId>
		  <groupId>geronimo-spec</groupId>
		  <version>1.0.1B-rc4</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>
	  <dependency>
		  <artifactId>geronimo-spec-j2ee-management</artifactId>
		  <groupId>geronimo-spec</groupId>
		  <version>1.0-rc4</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>	
	  <!--- for http -->
	  <dependency>
		  <artifactId>activemq-optional</artifactId>
		  <groupId>activemq</groupId>
		  <version>3.2</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>	
	  	  
	  <!-- for http / xstream protocol  -->
	  
	  <dependency>
		  <artifactId>xstream</artifactId>
		  <groupId>xstream</groupId>
		  <version>1.1.2</version>
		  <type>jar</type>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>
	  </dependency>	
	  <dependency>
		  <artifactId>xpp3</artifactId>
		  <groupId>xpp3</groupId>
		  <version>1.1.3.4d_b4_min</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>		
	  </dependency>
	  <!-- unsure whether this is strictly needed,or the correct version.
	       must experiment -->
	  <dependency>
		  <artifactId>commons-httpclient</artifactId>
		  <groupId>commons-httpclient</groupId>
		  <version>2.0.1</version>
		  <properties>
			  <jnlp.jar>true</jnlp.jar>			
		  </properties>
	  </dependency>
	  


<!-- stuff required in maven build -->
    <dependency>
      <groupId>commons-jelly</groupId>

      <artifactId>commons-jelly-tags-jsl</artifactId>

      <version>20030211.143151</version>

      <properties />
    </dependency>

    <dependency>
      <groupId>commons-jelly</groupId>

      <artifactId>commons-jelly-tags-xml</artifactId>

      <version>20030211.142705</version>

      <url>http://jakarta.apache.org/commons/jelly/libs/xml/</url>

      <properties />
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory />

    <unitTestSourceDirectory />

    <unitTest />
  </build>
</project>

