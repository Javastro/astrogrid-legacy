<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.astrogrid</groupId>
  <artifactId>astrogrid-dsa-catalog</artifactId>
  <packaging>war</packaging>
  <version>2009.1.02</version>
  <name>AstroGrid DSA/Catalog web-application</name>
  

  <parent>
    <groupId>org.astrogrid</groupId>
    <artifactId>astrogrid-base</artifactId>
    <version>2009.1-20090622.102645-18</version>
  </parent>

  <dependencies>

    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-dsa</artifactId>
      <version>2009.1.02</version>
    </dependency>

    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-security</artifactId>
      <version>2009.1</version>
    </dependency>

    <!-- Junk dependency: stops Maven POM inheritence breaking -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-common</artifactId>
      <version>2008.2</version>
    </dependency>

    <!-- Junk dependency: stops Maven POM inheritence breaking -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-contracts</artifactId>
      <version>2008.2</version>
    </dependency>

    <dependency>
      <groupId>net.sourceforge.junitee</groupId>
      <artifactId>junite2</artifactId>
      <version>2.0.0</version>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>

    <!-- castor 0.9.5 needs this -->
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.8.1</version>
    </dependency>

  </dependencies>

  <build>
    <finalName>dsa-catalog</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
          <webResources>
            <resource>
              <directory>src/main/resources</directory>
              <includes>
                <include>about.txt</include>
                <include>navigation.xml</include>
              </includes>
              <filtering>true</filtering>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <netbeans.hint.deploy.server>gfv3</netbeans.hint.deploy.server>
    <astrogrid.name>dsa/dsa-catalog</astrogrid.name>
  </properties>
  <url>${astrogrid_doc_URL_root}/p/dsa/${project.version}/dsa-catalog</url>

  <distributionManagement>
    <site>
      <id>agsite</id>
      <url>${astrogrid_doc_server_root}/p/dsa/${project.version}/dsa-catalog</url>
    </site>
  </distributionManagement>
  
</project>
