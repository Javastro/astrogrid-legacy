  <build>
    <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>

    <resources>
      <resource>
        <targetPath>org/astrogrid/query</targetPath>
        <filtering>false</filtering>
        <directory>${basedir}/src/main/java/org/astrogrid/query</directory>
        <includes>
          <include>**/*.sql</include>
          <include>**/*.xml</include>
          <include>**/*.xsl</include>
        </includes>
      </resource>
      <resource>
        <targetPath>org</targetPath>
        <directory>${basedir}/src/main/java/org</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.xsl</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <targetPath>org</targetPath>
        <filtering>false</filtering>
        <directory>${basedir}/src/test/java/org</directory>
        <includes>
          <include>**/*.sql</include>
          <include>**/*.xml</include>
          <include>**/*.xsl</include>
          <include>**/*.fits</include>
          <include>**/*.properties</include>
          <include>**/data</include>
          <include>**/data/*</include>
        </includes>
      </testResource>
    </testResources>
  </build>

