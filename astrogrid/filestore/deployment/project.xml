<project>
    <extend>../maven/project.xml</extend>
    <artifactId>astrogrid-filestore-deploy-script</artifactId>
    <name>FileStore Installation Script</name>
    <organization/>
    <description>This project contains everything necessary to install the application, when run as a stand-alone ant script. This is then bundled into a jar 
        for installation on a webserver from where it can be accessed by other applications. </description>
    <shortDescription>Subproject to hold ant scripts and resources specific to the filestore installation</shortDescription>
    <repository/>
    <build>
        <resources>
            <resource>
                <directory>ant</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
    <dependencies>
        <dependency>
            <groupId>catalina-ant</groupId>
            <artifactId>catalina-ant</artifactId>
            <version>5.0.18</version>
            <properties/>
        </dependency>
        <!--stuff needed by the Registry Ant task-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-common</artifactId>
            <version>${astrogrid.common.version}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-deployment</artifactId>
            <version>${astrogrid.deployment.version}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-registry-client-lite</artifactId>
            <version>${astrogrid.registry.version}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-registry-common</artifactId>
            <version>${astrogrid.registry.version}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-discovery</groupId>
            <artifactId>commons-discovery</artifactId>
            <version>20030211.213356</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jaxrpc</groupId>
            <artifactId>jaxrpc</artifactId>
            <version></version>
            <jar>jaxrpc.jar</jar>
            <properties/>
        </dependency>
        <dependency>
            <groupId>saaj</groupId>
            <artifactId>saaj</artifactId>
            <version></version>
            <jar>saaj.jar</jar>
            <properties/>
        </dependency>
        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
            <version>1.4</version>
            <properties/>
        </dependency>
        <!--make sure the war gets built first, so we can copy it in-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-filestore</artifactId>
            <version>${pom.currentVersion}</version>
            <type>war</type>
            <properties/>        
        </dependency>
    </dependencies>
</project>