<properties>
    <!--+
        | Configuration properties for the community service.
        | These values are for illustration only.
        | The actual values should be filled in by the Ant build script.
        |
        +-->
    <category name="org.astrogrid.community">
        <!--+
            | The local community name.
            | This will default to your local hostname
            +-->
        <property name="community.name" value="star.rl.ac.uk"/>

        <!--+
            | The community host name.
            | This will default to your local hostname
            +-->
        <property name="community.host" value="stargrid1.bnsc.rl.ac.uk"/>

        <!--+
            | The local community services.
            | These will default to the standard Axis services URL using the community host name.
            +-->
        <property name="policy.manager.url" value=""/>
        <property name="policy.service.url" value=""/>

        <!--+
            | Configuration for the server database.
            | No defaults, filled in by the Ant build script.
            +-->
        <property name="database.name"    value=""/>
        <property name="database.config"  value=""/>
        <property name="database.mapping" value=""/>

        <!-- Configuration for the community client  -->
        <property name="community.security"    value="off" />
        <property name="community.secure.port" value="8443" />
        <!-- Configuration for the portal client  -->
        <property name="portal.security" value="off" />
        <property name="portal.secure.port" value="8443" />
        <property name="portal.nonsecure.port" value="8080" />
        <!-- Configuration for the portal site  -->
        <property name="astrogrid.admin" value="Kevin Benson" />
        <property name="astrogrid.adminEmail" value="kmb@mssl.ucl.ac.uk" />
    </category> 
</properties>
