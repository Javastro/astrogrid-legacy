<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>../server/project.xml</extend>
    <artifactId>astrogrid-cea-http</artifactId>
    <currentVersion>2007.1.1</currentVersion>
    <name>CEA HTTP-application server</name>
    <description>
        Library to publish HTTP applications in the Common Execution Architecture
   </description>
    <shortDescription>CEA facade for external HTTP applications</shortDescription>
      <packageGroups>
  		<packageGroup>
  			<title>Http Applications</title>
  			<packages>org.astrogrid.applications.http*</packages>
  		</packageGroup>
	  </packageGroups>
    <reports>
      <report>download</report>
      <report>maven-changes-plugin</report>
      <report>maven-javadoc-plugin</report>
      <report>maven-junit-report-plugin</report>
      <report>maven-license-plugin</report>
      <report>maven-pmd-plugin</report>
    </reports>
    <dependencies>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-cea-server</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <properties>
              <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>2.0.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/httpclient/</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
    </dependencies>
    <properties/>
    
</project>