<project>
    <extend>../server/project.xml</extend>
    <artifactId>astrogrid-cea-http</artifactId>
    <currentVersion>${astrogrid.applications.version}</currentVersion>
    <name>AstroGrid HTTP applications CEA server</name>
    <description>
        Library to publish HTTP applications in the Common Execution Architecture
   </description>
    <shortDescription>AstroGrid HTTP Application CEA Server</shortDescription>
      <packageGroups>
  		<packageGroup>
  			<title>Http Applications</title>
  			<packages>org.astrogrid.applications.http*</packages>
  		</packageGroup>
	  </packageGroups>
    <dependencies>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-cea-server-jar</artifactId>
            <version>${pom.currentVersion}</version>
            <jar>astrogrid-cea-server-${pom.currentVersion}.jar</jar>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-cea-server</artifactId>
            <version>${pom.currentVersion}</version>
            <type>war</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>2.0.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/httpclient/</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-pal-query</artifactId>
            <!--version>${astrogrid.pal.version}</version-->
			<!-- pal latest 0.10-000/0.9-010/0.9-009 are causing application/http integrationtests failing, rolling back to 0.9-b002pl for now for only application/http see bug 1091/1120 and 1110-->
			<version>0.9-b002pl</version>
            <type>jar</type>
                <properties>
                    <war.bundle>true</war.bundle>
                </properties>        	
        </dependency>    	
    	
        <!-- for writing XML -->
       <dependency>
          <artifactId>astrogrid-xml</artifactId>
          <groupId>org.astrogrid</groupId>
          <version>${astrogrid.xml.latest}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>       	
       </dependency>

       <dependency>
          <artifactId>astrogrid-slinger-api</artifactId>
          <groupId>org.astrogrid</groupId>
          <version>${astrogrid.slinger.version}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>       	
       </dependency>

    </dependencies>
    <properties/>
</project>