<?xml version="1.0" encoding="UTF-8"?>
    <Resource status="active" xmlns="http://www.ivoa.net/xml/VOResource/v0.10" xmlns:ceab="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="cea:CeaHttpApplicationType" xmlns:cea="http://www.ivoa.net/xml/CEAService/v0.2" xsi:schemaLocation="http://www.ivoa.net/xml/CEAService/v0.2 ../../../../../../../../../workflow-objects/schema/VOCEA-v0.2.xsd">
        <title>An http-get Echoer App</title>
        <shortName>Echoer</shortName>
        <identifier>ivo://org.astrogrid.test/Echoer</identifier>
     <curation>
            <publisher>
               Astrogrid
            </publisher>
            <contact>
                <name>John Taylor</name>
                <email>jdt@roe.ac.uk</email>
            </contact>
      </curation>
          <content>
            <description>This is part of the astrogrid CEA.  It describes an applicaton that simple adds two params and returns the result.</description>
            <referenceURL>http://www.astrogrid.org/maven/docs/snapshot/applications/</referenceURL>
        </content>
         <cea:ApplicationDefinition>
			<cea:ApplicationKind>http</cea:ApplicationKind>
            <cea:Parameters>
                <cea:ParameterDefinition name="x" type="text"/>
                <cea:ParameterDefinition name="y" type="text"/>
				<cea:ParameterDefinition name="Reply" type="text"/>
            </cea:Parameters>
            <cea:Interfaces>
                <ns29:Interface name="iface1" xmlns:ns29="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1">
                    <ns29:input>
						<ns29:pref ref="x"/>
						</ns29:input>
                    <ns29:output>
                        <ns29:pref ref="Reply"/>
                    </ns29:output>
                </ns29:Interface>
                <ns29:Interface name="iface2" xmlns:ns29="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1">
                    <ns29:input>
						<ns29:pref ref="y"/>
						</ns29:input>
                    <ns29:output>
                        <ns29:pref ref="Reply"/>
                    </ns29:output>
                </ns29:Interface>
				<ns29:Interface name="iface3" 
					xmlns:ns29="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1">
					<ns29:input>
						<ns29:pref ref="x"/>
						<ns29:pref ref="y"/>
					</ns29:input>
					<ns29:output>
						<ns29:pref ref="Reply"/>
					</ns29:output>
				</ns29:Interface>
            </cea:Interfaces>	
        </cea:ApplicationDefinition>
		<cea:CeaHttpAdapterSetup>
			<!--Ensure the following matches that in the test webserver-->
			<ceab:URL>http://127.0.0.1:8078/echo</ceab:URL>
		</cea:CeaHttpAdapterSetup>
    </Resource>
	
