<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- take note - this project extends the generic server project
    - in this way we inherit all the dependencies -->
  <extend>${basedir}/../server/project.xml</extend>
  <id>astrogrid-cea-commandline</id>
  <currentVersion>${astrogrid.applications.version}</currentVersion>
  <name>CL-CEC</name>

  <description><![CDATA[
  	The Common Execution Connector for command-line applications (CL-CEC) makes astronomical applications available to the 
  	Common Execution Architecture and hence to AstroGrid's end-users. The CL-CEC provides a web-service for access to a specific,
  	locally-configured set of command-line applications.]]>
  </description>

  <shortDescription>AstroGrid Commandline Common Execution Connector (CL-CEC</shortDescription>



    <dependencies>
        <!-- NWW - begin-hack -->
        <!-- necessary to give this one a 'fake' name to force maven to grab this _and_ the equivalent war file. -->
        <dependency>
                <groupId>org.astrogrid</groupId>
                <artifactId>astrogrid-cea-server-jar</artifactId>
		        <version>${pom.currentVersion}</version>
                <type>jar</type>
                <jar>astrogrid-cea-server-${pom.currentVersion}.jar</jar>
                <properties>
                        <war.bundle>true</war.bundle>
                </properties>
        </dependency>
        <dependency>
                <groupId>org.astrogrid</groupId>
                <artifactId>astrogrid-cea-server</artifactId>
                <version>${pom.currentVersion}</version>
                <type>war</type>
        </dependency>
        <!-- nww-end-hack -->
    <dependency>
      <groupId>commons-digester</groupId>
      <artifactId>commons-digester</artifactId>
      <version>1.6</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
 <!-- stuff for tools, although some stuff liable to get moved back into core - once two implementations use it -->
        <dependency>
            <groupId>voi</groupId>
            <artifactId>voi-vowrite</artifactId>
            <version>UNKNOWN</version>
            <jar>voi.vowrite.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>kxml</groupId>
            <artifactId>kxml2</artifactId>
            <version>UNKNOWN</version>
            <jar>kxml2.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>cds</groupId>
            <artifactId>savot-model</artifactId>
            <version>UNKNOWN</version>
            <jar>cds.savot.model.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>cds</groupId>
            <artifactId>savot-pull</artifactId>
            <version>UNKNOWN</version>
            <jar>cds.savot.pull.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>cds</groupId>
            <artifactId>xml</artifactId>
            <version>UNKNOWN</version>
            <jar>cds.xml.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>cds</groupId>
            <artifactId>samples</artifactId>
            <version>UNKNOWN</version>
            <jar>cds.savot.samples.jar</jar>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

    </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>

      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
          <includes>
            <include>app/**</include>
            <include>**/*.xml</include>
            <include>**/*.properties</include>
            <include>**/*.sql</include>
         </includes>
        </resource>
		<resource>
			<directory>${basedir}/config</directory>
			<include>CeaApplicationConfig.xml</include>
		</resource>
      </resources>
    </unitTest>

    <resources>
            <resource><!-- config files -->
                <directory>${basedir}/src/java</directory>
                <includes>
                        <include>**/*.xml</include>
                        <include>**/*.properties</include>
                </includes>
        </resource>

    </resources>

  </build>

</project>
