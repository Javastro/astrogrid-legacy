<?xml version="1.0" encoding="iso-8859-1"?>
<!-- This is an application-description file of the kind read by the CL-CEC.
	   It has one, dummy application, and is used as default until the operator 
	   configures a proper description-file. It's not sufficient to run the
	   CL-CEC in service but saves the CEC local controls from crashing due to
	   uninitialized variables during the set-up process. -->
<CommandLineExecutionControllerConfig xmlns="http://www.astrogrid.org/schema/CEAImplementation/v1"
	xmlns:ceab="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1"
	xmlns:agpd="http://www.astrogrid.org/schema/AGParameterDefinition/v1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.astrogrid.org/schema/CEAImplementation/v1
	../../../workflow-objects/schema/CEAImplementation.xsd">
	<!-- The application name is its IVOID with the ivo:// prefix left out.
		   The part before the first slash is the authority ID; the part after
		   the first slash is the resource key. -->
	<Application name="org.astrogrid.localhost/Dummy">
		<ceab:Parameters>
            <CmdLineParameterDefn name="P1" type="text" commandPosition="1" fileRef="false">
                <agpd:UI_Name>First dummy parameter</agpd:UI_Name>
                <agpd:UI_Description>This is an example of a parameter that the application expects to be passed by value</agpd:UI_Description>
            </CmdLineParameterDefn>
            <CmdLineParameterDefn name="P2" type="text" commandPosition="2" fileRef="true">
                <agpd:UI_Name>Second dummy parameter</agpd:UI_Name>
                <agpd:UI_Description>This is an example of a parameter that the application expects to be passed as a path to a file</agpd:UI_Description>
            </CmdLineParameterDefn>
        </ceab:Parameters>
		<ceab:Interfaces>
            <!-- One or more interfaces may be supplied -->
			<ceab:Interface name="Dummy">
				<ceab:input>
					<ceab:pref ref="P1"/>
				</ceab:input>
				<ceab:output>
					<ceab:pref ref="P2"/>
				</ceab:output>
			</ceab:Interface>
		</ceab:Interfaces>
		<ExecutionPath>/nix/nada/not/there</ExecutionPath>
		<LongName>Dummy</LongName>
	</Application>
</CommandLineExecutionControllerConfig>