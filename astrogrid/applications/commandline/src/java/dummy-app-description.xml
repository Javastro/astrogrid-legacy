<?xml version="1.0"?>
<!-- This is an application-description file of the kind read by the
     command-line-application server. It has one application: a sleep for
     a user-defined time. There must be at least one application in this file
     to stop the parser crashing when the application-server starts up. This
     application serves that purpose and will actually run on must servers: it
     just needs /bin/sleep to be present on the host. -->
<CommandLineExecutionControllerConfig xmlns="http://www.astrogrid.org/schema/CEAImplementation/v1"
    xmlns:ceab="http://www.astrogrid.org/schema/CommonExecutionArchitectureBase/v1"
    xmlns:agpd="http://www.astrogrid.org/schema/AGParameterDefinition/v1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.astrogrid.org/schema/CEAImplementation/v1
	                http://software.astrogrid.org/schema/cea/CEAImplementation/v1.0/CEAImplementation.xsd">
  <!-- The application name is its IVO-ID.
       The org.astrogrid.localhost part is the authority ID;
       and sleep is the resource key. -->
  <Application name="ivo://org.astrogrid.localhost/sleep">
    <ceab:Parameters>
      <CmdLineParameterDefn name="P1" type="text" commandPosition="1" fileRef="false">
        <agpd:UI_Name>Duration</agpd:UI_Name>
        <agpd:UI_Description>Time to sleep</agpd:UI_Description>
        <agpd:Units>s</agpd:Units>
      </CmdLineParameterDefn>
    </ceab:Parameters>
    <ceab:Interfaces>
      <ceab:Interface name="sleep">
        <ceab:input>
	  <ceab:pref ref="P1"/>
        </ceab:input>
      </ceab:Interface>
    </ceab:Interfaces>
    <ExecutionPath>/bin/sleep</ExecutionPath>
    <LongName>sleep</LongName>
    <Description>Sleeps for a given length of time.</Description>
  </Application>
</CommandLineExecutionControllerConfig>