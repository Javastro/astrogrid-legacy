        <title>BPZ</title>
        <shortName>BPZ</shortName>
        <identifier>ivo://org.astrogrid/BPZ</identifier>
        <curation>
            <publisher>Astrogrid</publisher>
            <creator>
                <name>Astrogrid</name>
                <logo>??</logo>
            </creator>
            <date>2004-03-26</date>
