    </report>
    <report>
      maven-jxr-plugin
    </report>
    <report>
      maven-license-plugin
    </report>
    <report>
      maven-linkcheck-plugin
    </report>
    <report>
      maven-pmd-plugin
    </report>
    <report>
      maven-tasklist-plugin
    </report>
    <report>
      maven-simian-plugin
    </report>
  </reports>
</project>
