  <package>org.astrogrid</package>
  <logo>http://www.astrogrid.org/images/AGlogo</logo>

  <shortDescription>AstroGrid Applications Integration Components</shortDescription>

  <siteDirectory>/var/www/www/maven/build/applications</siteDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid/applications
    </connection>
