      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test/java</directory>
          <includes>
            <include>app/**</include>
            <include>**/*.xml</include>
            <include>**/*.properties</include>
            <include>**/*.sql</include>
            <include>**/*.txt</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
    <resources>
