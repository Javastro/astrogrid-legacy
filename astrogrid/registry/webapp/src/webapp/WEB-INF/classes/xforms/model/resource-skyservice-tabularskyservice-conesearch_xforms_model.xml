<?xml version="1.0" encoding="iso-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="layout.xsl"?>
<form xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xforms="http://www.w3.org/2002/xforms">

<!-- begin table group -->
<xforms:input ref="cs:capability/@standardID">
<xforms:label>Standard ID:</xforms:label>
</xforms:input>

<xforms:input ref="cs:capability/@standardURL">
<xforms:label>Standard URL:</xforms:label>
</xforms:input>

<!-- needs to be float -->
<xforms:input ref="cs:capability/maxSR">
<xforms:label>Max Longitude Size:</xforms:label>
</xforms:input>

<!-- needs to be int -->
<xforms:input ref="cs:capability/maxRecords">
<xforms:label>Max Latitude Size:</xforms:label>
</xforms:input>

<xforms:select ref="cs:capability/verbosity" appearance="minimal">
<xforms:label>Verbosity</xforms:label>
<xforms:choices>
<xforms:item>
	<xforms:label>True</xforms:label><xforms:value>true</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>False</xforms:label><xforms:value>false</xforms:value>
</xforms:item>
</xforms:choices>
</xforms:select>

</form>