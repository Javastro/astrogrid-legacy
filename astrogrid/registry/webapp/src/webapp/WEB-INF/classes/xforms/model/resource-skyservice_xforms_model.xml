<?xml version="1.0" encoding="iso-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="layout.xsl"?>
<form xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xforms="http://www.w3.org/2002/xforms">

<xforms:input ref="vs:facility">
<xforms:label>Facility:</xforms:label>
</xforms:input>

<xforms:input ref="vs:facility/@ivo-id">
<xforms:label>Facility Identifier:</xforms:label>
</xforms:input>

<xforms:input ref="vs:instrument">
<xforms:label>Instrument:</xforms:label>
</xforms:input>

<xforms:input ref="vs:instrument/@ivo-id">
<xforms:label>Instrument Identifier:</xforms:label>
</xforms:input>

<!-- put group coverage -->

<xforms:select ref="vs:coverage/vs:spatial/vs:region/@type" appearance="minimal">
<xforms:label>Region Typed</xforms:label>
<xforms:choices>
<xforms:item>
	<xforms:label>All Sky</xforms:label><xforms:value>AllSky</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>Coordinate Range</xforms:label><xforms:value>CoordRange</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>Circle Region</xforms:label><xforms:value>CircleRegion</xforms:value>
</xforms:item>
</xforms:choices>
</xforms:select>

<!-- coordframe goes with CoordRange and Circle Region -->
<!-- need to add more later -->
<xforms:select ref="vs:coverage/vs:spatial/vs:region/vs:coordFrame" appearance="minimal">
<xforms:label>Spectral Waveband</xforms:label>
<xforms:choices>
<xforms:item>
	<xforms:label>ICRS</xforms:label><xforms:value>ICRS</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>FK5</xforms:label><xforms:value>FK5</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>Infrared</xforms:label><xforms:value>Infrared</xforms:value>
</xforms:item>
</xforms:choices>
</xforms:select>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:long/vs:min">
<xforms:label>Longitude Minimum:</xforms:label>
</xforms:input>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:long/vs:max">
<xforms:label>Longitude Maximum:</xforms:label>
</xforms:input>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:lat/vs:min">
<xforms:label>Latitude Minimum:</xforms:label>
</xforms:input>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:lat/vs:max">
<xforms:label>Latitude Maximum:</xforms:label>
</xforms:input>

<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:radius">
	<xforms:label>Radius:</xforms:label>
</xforms:input>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:long">
<xforms:label>Longitude:</xforms:label>
</xforms:input>

<!-- bind as xs:double -->
<xforms:input ref="vs:coverage/vs:spatial/vs:region/vs:lat">
<xforms:label>Latitude:</xforms:label>
</xforms:input>


<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spatial/vs:resolution">
<xforms:label>Resolution:</xforms:label>
</xforms:input>



<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spatial/vs:regionOfRegard">
	<xforms:label>Region of Regard:</xforms:label>
</xforms:input>

<!-- go back and add more -->
<xforms:select ref="vs:coverage/vs:spectral/vs:waveband" appearance="minimal">
<xforms:label>Spectral Waveband</xforms:label>
<xforms:choices>
<xforms:item>
	<xforms:label>Radio</xforms:label><xforms:value>Radio</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>Millimeter</xforms:label><xforms:value>Millimeter</xforms:value>
</xforms:item>
<xforms:item>
	<xforms:label>Infrared</xforms:label><xforms:value>Infrared</xforms:value>
</xforms:item>
</xforms:choices>
</xforms:select>

<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spectral/vs:range/vs:min">
	<xforms:label>Minimum Range:</xforms:label>
</xforms:input>

<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spectral/vs:range/vs:max">
	<xforms:label>Maximum Range:</xforms:label>
</xforms:input>

<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:spectral/vs:resolution">
	<xforms:label>Spectral Resolution:</xforms:label>
</xforms:input>

<!-- bind as xs:date -->
<xforms:input ref="vs:coverage/vs:temporal/vs:startTime">
	<xforms:label>Start Time:</xforms:label>
</xforms:input>

<xforms:input ref="vs:coverage/vs:temporal/vs:endTime">
	<xforms:label>Start Time:</xforms:label>
</xforms:input>

<!-- bind as xs:float -->
<xforms:input ref="vs:coverage/vs:temporal/vs:resolution">
	<xforms:label>Temporal Resolution:</xforms:label>
</xforms:input>
<!-- end of coverage group-->

</form>