<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://www.astrogrid.org/schema/AstrogridDataService/v0.1" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           xmlns:vr="http://www.ivoa.net/xml/VOResource/v0.9" 
           xmlns:as="http://www.astrogrid.org/schema/AstrogridDataService/v0.1" 
           elementFormDefault="qualified" attributeFormDefault="unqualified"
	   version="0.4">

   <xs:annotation>
      <xs:appinfo>
        <vm:SchemaName>AstrogridDataService</vm:SchemaName>
        <vm:schemaPrefix>as</vm:schemaPrefix>
        <vm:targetPrefix>as</vm:targetPrefix>
      </xs:appinfo>
      <xs:documentation>
        An extension to the core resource metadata (VOResource) for 
      	describing extensions to an Interface Service
      </xs:documentation>
      <xs:documentation>
      	Diff 0.2-0.1: Service and subelements moved to VOResource core
      </xs:documentation>
   </xs:annotation>

	<xs:import schemaLocation="VOResource-v0.9.xsd" namespace="http://www.ivoa.net/xml/VOResource/v0.9"/>
   	<!--
   	<xs:import schemaLocation="VODataService-v0.4.xsd" namespace="http://www.ivoa.net/xml/VODataService/v0.4"/>
	-->
   <xs:element name="InterfaceType" type="as:InterfaceKindType">
      <xs:annotation>
       	 <xs:appinfo>
       	   <vm:dcterm>The kind of interface</vm:dcterm>
       	 </xs:appinfo>           
         <xs:documentation>
			The kind of interface.
	 </xs:documentation>
      </xs:annotation>
   </xs:element>
   
   <xs:simpleType name="InterfaceKindType">
        <xs:restriction base="xs:string">
	    <xs:enumeration value="Myspace">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Myspace interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="FileStore">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid FileStore interface
		     authentication.
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="Community_PolicyService">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Community Policy Service interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="Community_PolicyManager">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Community Policy Manager interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="Community_SecurityManager">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Community Security Manager interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="Community_SecurityService">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Community Security Service interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
	    <xs:enumeration value="CEAService">
	       <xs:annotation>
	          <xs:documentation>
			     Astrogrid Community Security Service interface
	          </xs:documentation>
	       </xs:annotation>
	    </xs:enumeration>
         </xs:restriction>
   </xs:simpleType>


   <xs:element name="AstrogridInterface" type="as:AstrogridInterfaceType"
		substitutionGroup="vr:Interface">
     <xs:annotation>
       <xs:documentation>
          A web service specefic to Astrogrid.
       </xs:documentation>
       <xs:documentation>
          Note that the URL for help with this service can be put into
          the Service/ReferenceURL element.
       </xs:documentation>
     </xs:annotation>
   </xs:element>

   <xs:complexType name="AstrogridInterfaceType">
      <xs:complexContent>
         <xs:extension base="vr:Interface">
            <xs:sequence>
               <xs:element ref="as:InterfaceType" minOccurs="1" 
   		              maxOccurs="1"/>
                  <xs:annotation>
                    <xs:documentation>
                       an interface type/kind.
                    </xs:documentation>
                  </xs:annotation>
               </xs:element>
            </xs:sequence>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>
   
</xs:schema>
