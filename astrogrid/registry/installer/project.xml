<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="maven-project.xsd">
<!--    <extend>../../maven-base/project.xml</extend> -->
    <extend>${basedir}/../maven/project.xml</extend>
    <id>auto-registry-integration</id>
    <name>Automated Integration Testing</name>
	
	
	<description>
    Automated integration testing. This project will install the astorgrid registry component
    (someday) to a local tomcat5 server, and set up the required configuration and workfing
    directories.
    </description>

    <build />
    <dependencies>
        <dependency>
                <artifactId>astrogrid-registry</artifactId>
                <groupId>org.astrogrid</groupId>
		        <version>${pom.currentVersion}</version>
                <type>war</type>
        </dependency>

        <dependency>
            <artifactId>catalina-ant</artifactId>
            <groupId>catalina-ant</groupId>
            <!--<version>4.1.24</version>-->
            <version>5.0.18</version>
        </dependency>
        <!-- dunno if we need this here -->
        <dependency>
            <artifactId>junit</artifactId>
            <groupId>junit</groupId>
            <version>3.8</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>


        <!--+
            | Community install tools Used currently for Registry upload.
            +-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-install</artifactId>
            <version>SNAPSHOT</version>
            <type>zip</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>
        
        <dependency>
            <groupId>exist</groupId>
            <artifactId>exist</artifactId>
	        <version>SNAPSHOT</version>
            <type>war</type>
            <properties/>
        </dependency>

        <!--+
            | Community install tools.
            | Required for the Registry upload only.
            +-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-install</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
        </dependency>

    </dependencies>
</project>
