<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id: project.xml,v 1.6 2005/03/22 16:37:59 mch Exp $ -->

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

    xsi:noNamespaceSchemaLocation="../../maven-base/xsd/maven-project.xsd">

    <!--will eventually extend from /base when Maven RC3 installed-->

    <extend>${basedir}/../../maven-base/project.xml</extend>

    <currentVersion>${astrogrid.slinger.version}</currentVersion>

    <id>astrogrid-slinger-webnode</id>

    <name>Astrogrid Slinger WebNode Package</name>

    <description>Webapp wrapper for Slinger</description>

    <shortDescription>AstroGrid Slinger Webapp</shortDescription>

    <dependencies>

        <dependency>
            <artifactId>astrogrid-slinger-api</artifactId>
            <groupId>org.astrogrid</groupId>
            <version>${astrogrid.slinger.version}</version>
        </dependency>

        <dependency>
            <artifactId>astrogrid-xml</artifactId>
            <groupId>org.astrogrid</groupId>
            <version>${astrogrid.xml.stable}</version>
        </dependency>


         <!-- for logging -->
        <dependency>
            <artifactId>log4j</artifactId>
            <groupId>log4j</groupId>
            <version>1.2.4</version>
        </dependency>

        <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.0.3</version>
        </dependency>

      <!-- for connecting to filemanager myspace -->
       <dependency>
            <artifactId>astrogrid-filemanager-client</artifactId>
            <groupId>org.astrogrid</groupId>
            <version>${astrogrid.filemanager.version}</version>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
       </dependency>
      
       <dependency>
           <artifactId>astrogrid-filemanager-contract</artifactId>
           <groupId>org.astrogrid</groupId>
           <version>${astrogrid.filemanager.version}</version>
           <properties>
              <war.bundle>true</war.bundle>
           </properties>
       </dependency>

       <!-- JavaMail for Mail targets -->
       <dependency>
         <id>JavaMail</id>
         <version>UNKNOWN</version>
         <jar>JavaMail.jar</jar>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
       </dependency>

    <!-- accessing myspace services -->
    <dependency>
      <groupId>org.astrogrid</groupId>
      <artifactId>astrogrid-store-client</artifactId>
      <version>${astrogrid.mySpace.version}</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <!-- FTP access -->
    <dependency>
      <groupId>commons-net</groupId>
      <artifactId>commons-net</artifactId>
      <version>1.1.0</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

       <!-- axis, for myspace client -->
       <dependency>
         <id>axis</id>
         <version>1.1</version>
       </dependency>
       <dependency>
         <id>jaxrpc-api</id>
         <version>1.0.3</version>
       </dependency>
       <dependency>
         <id>jax-qname</id>
         <version>UNKNOWN</version>
         <jar>jax-qname.jar</jar>
       </dependency>


       <!-- for VoSpaceResolver -->
       <dependency>
          <artifactId>astrogrid-registry-client-lite</artifactId>
          <groupId>org.astrogrid</groupId>
          <version>${astrogrid.registry.version}</version>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
       </dependency>

       <dependency>
         <artifactId>astrogrid-registry-common</artifactId>
         <groupId>org.astrogrid</groupId>
         <version>${astrogrid.registry.version}</version>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
       </dependency>
    

        <!-- Community resolving components.-->
        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-common</artifactId>
            <version>${astrogrid.community.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-client</artifactId>
             <version>${astrogrid.community.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>org.astrogrid</groupId>
            <artifactId>astrogrid-community-resolver</artifactId>
           <version>${astrogrid.community.version}</version>
            <type>jar</type>
            <url>http://www.astrogrid.org/</url>
            <properties>
               <war.bundle>true</war.bundle>
            </properties>
        </dependency>

 

       <!-- servlet support (for compiling against - no need for deployment war as servlet container should have it) -->
       <dependency>
         <id>servletapi</id>
         <version>2.3</version>
       </dependency>


    </dependencies>

</project>








