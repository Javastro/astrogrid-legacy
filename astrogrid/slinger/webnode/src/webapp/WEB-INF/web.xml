<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

  <display-name>Slinger WebNode</display-name>
  <description>
    Servlets and pages for resolving and routing data
  </description>

  <servlet>
    <servlet-name>Resolver</servlet-name>
    <description>Resolves source IDs to streams</description>
    <servlet-class>org.astrogrid.slinger.ResolverServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Copier</servlet-name>
    <description>Copies source IDs to target IDs</description>
    <servlet-class>org.astrogrid.slinger.CopyServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Sender</servlet-name>
    <description>Copies text to target IDs</description>
    <servlet-class>org.astrogrid.slinger.SendServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Resolver</servlet-name>
    <url-pattern>/Resolve</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Copier</servlet-name>
    <url-pattern>/Copy</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Sender</servlet-name>
    <url-pattern>/SendText</url-pattern>
  </servlet-mapping>


  <welcome-file-list id="WelcomeFileList">
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
