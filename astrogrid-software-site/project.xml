<project>
<!--pointless comment-->
    <extend>${basedir}/../astrogrid/maven-base/project.xml</extend>
    <artifactId>astrogrid-software-site</artifactId>
    <name>AstroGrid</name>
    <shortDescription>AstroGrid Software Site</shortDescription>
    <logo>
    /images/veil_noao_strip.jpg
    </logo>
    <siteAddress>www.astrogrid.org</siteAddress>
    <siteDirectory>/var/www/software</siteDirectory>
    <url>http://software.astrogrid.org/</url>
    <repository>
        <connection> scm:cvs:pserver:anoncvs@cvs.astrogrid.org:/devel:astrogrid
            </connection>
        <developerConnection> 
            scm:cvs:ext:${maven.username}@cvs.astrogrid.org:/devel:astrogrid
            </developerConnection>
        <url> http://www.astrogrid.org/viewcvs/</url>
    </repository>
    <build/>
    <properties/>
    <!-- things that we need to fetch and unpack  - jnlp packages only.
    distros, etc can be linked directly into the repository. -->
    <dependencies>
    	<dependency>
    		<artifactId>astrogrid-cdk-core</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>
    	<dependency>
    		<artifactId>astrogrid-cdk-workflow</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>
    	<dependency>
    		<artifactId>astrogrid-cdk-scripting</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>    	
    	<dependency>
    		<artifactId>jescript-shell</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>
    	<dependency>
    		<artifactId>aladin-avo</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>    	    	    	
    	<dependency>
    		<artifactId>topcat</artifactId>
    		<groupId>org.astrogrid</groupId>
    		<type>war</type>
    		<version>${astrogrid.aggregate.version}</version>
    	</dependency>  
    </dependencies>
    <reports>
        <report>maven-license-plugin</report>
        <!-- because life is short enough already...-->
        <report>maven-linkcheck-plugin </report>
        <!---->
    </reports>
</project>