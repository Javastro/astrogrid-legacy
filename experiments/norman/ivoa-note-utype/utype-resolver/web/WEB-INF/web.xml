<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Utype resolver</display-name>
  <description>Resolves UTypes: demo; more documentation necessary.
  Norman Gray, norman@astro.gla.ac.uk
  </description>

  <context-param>
    <param-name>webmaster</param-name>
    <param-value>norman@astro.gla.ac.uk</param-value>
    <description>
      The EMAIL address of the administrator to whom questions
      and comments about this application should be addressed.
    </description>
  </context-param>

  <servlet>
    <servlet-name>utype-resolver</servlet-name>
    <description>Main servlet -- nothing exciting so far</description>
    <servlet-class>org.eurovotech.utypes.UtypeResolver</servlet-class>
    <init-param>
      <param-name>resolver-context</param-name>
      <param-value>/resolve</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>codemanager</servlet-name>
    <description>Allows direct interaction with the SISC REPL</description>
    <servlet-class>org.eurovotech.quaestor.CodeManager</servlet-class>
    <init-param>
      <param-name>status</param-name>
      <param-value>enabled</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>utype-resolver</servlet-name>
    <!-- this must match the utype-resolver servlet parameters, above -->
    <url-pattern>/resolve</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>codemanager</servlet-name>
    <url-pattern>/code</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>    <!-- 30 minutes -->
  </session-config>

  <mime-mapping>
    <extension>n3</extension>
    <mime-type>text/rdf+n3</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>rdf</extension>
    <mime-type>application/rdf+xml</mime-type>
  </mime-mapping>

</web-app>
