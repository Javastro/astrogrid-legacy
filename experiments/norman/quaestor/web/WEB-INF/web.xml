<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Quaestor</display-name>
  <description>Accepts ontologies and other sets of RDF data,
  and allows SPARQL queries on them.  Norman Gray, norman@astro.gla.ac.uk
  </description>

  <context-param>
    <param-name>webmaster</param-name>
    <param-value>norman@astro.gla.ac.uk</param-value>
    <description>
      The EMAIL address of the administrator to whom questions
      and comments about this application should be addressed.
    </description>
  </context-param>

  <servlet>
    <servlet-name>quaestor</servlet-name>
    <description>
      This servlet plays the main role.  At present, it simply
      reports parameters.
    </description>
    <servlet-class>org.eurovotech.quaestor.Quaestor</servlet-class>
    <init-param>
      <param-name>kb-context</param-name>
      <param-value>/kb</param-value>
    </init-param>
    <init-param>
      <param-name>xmlrpc-context</param-name>
      <param-value>/xmlrpc</param-value>
    </init-param>
  </servlet>

  <!--
  <servlet>
    <servlet-name>xmlrpc-server</servlet-name>
    <description>Implements an XML-RPC server</description>
    <servlet-class>org.eurovotech.quaestor.XmlRpcServer</servlet-class>
    <init-param>
      <param-name>rpc-handler-procedure</param-name>
      <param-value>xmlrpc-handler</param-value>
    </init-param>
  </servlet>
  -->

  <servlet>
    <servlet-name>codemanager</servlet-name>
    <description>Allows direct interaction with the SISC REPL</description>
    <servlet-class>org.eurovotech.quaestor.CodeManager</servlet-class>
    <init-param>
      <param-name>status</param-name>
      <param-value>enabled</param-value> <!-- must be enabled/disabled -->
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>quaestor</servlet-name>
    <url-pattern>/kb/*</url-pattern>
    <!-- If this is changed, there must be corresponding changes to
         quaestor.scm, which relies on this URL. -->
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>quaestor</servlet-name>
    <url-pattern>/xmlrpc</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>codemanager</servlet-name>
    <url-pattern>/code</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>    <!-- 30 minutes -->
  </session-config>

</web-app>
